<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:dt="urn:import:com.ziplly.app.client.widget"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" xmlns:cell="urn:import:com.google.gwt.user.cellview.client">

	<ui:style type="com.ziplly.app.client.conversation.ConversationView.Style">
		@external tiny-image-div, tiny-image;
		.messageFiltersPanel {
			margin-top: 30px;
		}
		.leftnavHeaderSpan {
		margin: 0;
		padding: 2px;
		font-size: 1em;
		color: #555444;
		background: #ddd;
		border-bottom: 1px solid #555;
		}
		.conversation {
		width: 98%;
		padding: 8px;
		margin: 6px 0;
		border-bottom: 1px solid #ddd;
		overflow: auto;
		}
		.conversation:hover {
		background: #0081c2;
		}
		.conversationNotRead {
		backround: #ccc;
		}
		.conversationNotRead:hover {
		backround: #0081c2;
		}
		.senderBlock {
		float: left;
		width: 15%;
		padding: 4px;
		margin-right: 2%;
		}
		.subjectBlock {
		float: left;
		overflow: hidden;
		width:
		52%;
		padding: 4px;
		margin-right: 4px;
		}
		.subjectHeader {
		padding: 4px;
		margin-left: 10px;
		margin-top: 10px;
		font-size: 18px;
		font-family:
		sans-serif;
		}
		.dateBlock {
		float:left;
		width: 20%;
		font-size: 10px;
		padding: 4px;
		}
		.replyTextArea {
		width: 90%;
		height: 65px;
		margin: 0;
		}
		.replyPanel TextArea {
		padding: 4px;
		margin: 2% 10%;
		width: 90%;
		height:
		50px;
		}
		.helpinline {
		display: inline-block;
		padding: 4px;
		color: #b94a48;
		margin: 2% 10% !important;
		width: 90%;
		}
		.buttonPanel {
		clear: both;
		padding: 4px;
		margin: 2% 10%;
		width: 50%;
		}
		.button{
		margin-left: 15px;
		}
		.asidePanel {
		float: left;
		width: 10%;
		margin-right: 1%;
		padding:
		6px;
		background: #faf8f6;
		}
		.asidePanel li {
		list-style: none;
		}
		.asidePanel dt
		{
		margin: 12px 2px;
		}
		.conversationPanel {
			float: left;
			width: 98%;
			margin-left: 20px;
			overflow: hidden;
		}
		.link {
		display: inline-block;
		color: #30abd5;
		padding:
		4px 10px;
		font-size: 1em;
		}
		.subjectFont {
		font-size: 13px;
		padding: 3px;
		font-family: verdana, sans;
		}
		.conversationRow {
		padding: 4px 10px;
		line-height: 40px;
		color: #424242;
		background: #f1f1f1;
		}
		.conversationColumn {
			margin-left: 20px !important;	
		}
		.innerDl {
			position: relative;
			left: 16px;
		}
		.tiny-image-div {
		width: 40px;
		height: 40px;
		overflow: hidden;
		}
		.tiny-image {
		height: 40px;
		width: 40px;
		}
		.message {
			width: 80%;
			margin: 10px auto;
		}
		.colSpan {
		max-width: 90%;
		}
	</ui:style>
	<b:FluidContainer>
		<b:FluidRow>
			<b:Column size="2" addStyleNames="{style.messageFiltersPanel} {style.colSpan}">
				<g:HTMLPanel>
					<dl>
						<dt>
							<div class="{style.leftnavHeaderSpan}">
								<g:Anchor addStyleNames="{style.link}" ui:field="messagesLink">
									<i class='fa fa-inbox'>&nbsp;Inbox
									</i>
									<span ui:field="unreadMessageCountSpan" />
								</g:Anchor>
							</div>
							<dl class="{style.innerDl}">
								<!-- <dt> <g:Anchor addStyleNames="{style.link}" ui:field="allMessagesLink"> 
									All <span ui:field="allMessageCountSpan" /> </g:Anchor> </dt> -->
								<dt>
									<g:Anchor addStyleNames="{style.link}" ui:field="receivedMessagesLink">
										Received
										<span ui:field="receivedMessageCountSpan" />
									</g:Anchor>
								</dt>
								<dt>
									<g:Anchor addStyleNames="{style.link}" ui:field="sentMessagesLink">
										Sent
										<span ui:field="sentMessageCountSpan" />
									</g:Anchor>
								</dt>
							</dl>
						</dt>
						<dt class="{style.leftnavHeaderSpan}">
							<g:Anchor addStyleNames="{style.link}" ui:field="settingsLink">
								<i class="fa fa-cog">&nbsp;Settings
								</i>
							</g:Anchor>
						</dt>
						<dt class="{style.leftnavHeaderSpan}">
							<g:Anchor addStyleNames="{style.link}" ui:field="profileLink">
								<i class="fa fa-user">&nbsp;Profile
								</i>
							</g:Anchor>
						</dt>
					</dl>
				</g:HTMLPanel>
			</b:Column>
			<b:Column size="9">
			    <b:Row>
					<b:Column offset="1" size="8">
					    <b:Alert ui:field="message" close="false" addStyleNames="{style.message}"/>
					</b:Column>
				</b:Row>	    
				<b:Row ui:field="conversationRow">
					<b:Column size="10">
						<g:HTMLPanel ui:field="conversationPanel" addStyleNames="{style.conversationPanel}">
						</g:HTMLPanel>
					</b:Column>
				</b:Row>
			</b:Column>
		</b:FluidRow>
	</b:FluidContainer>
</ui:UiBinder> 