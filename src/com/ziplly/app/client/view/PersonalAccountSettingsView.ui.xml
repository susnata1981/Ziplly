<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:dt="urn:import:com.ziplly.app.client.widget" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="accountview.css" />

	<b:FluidContainer addStyleNames="{style.settingsPanel}">
		<b:FluidRow>
			<b:Column offset="1" size="9">
				<b:Alert ui:field="message" close="false" animation="true"></b:Alert>
			</b:Column>
		</b:FluidRow>
		<b:FluidRow>
			<b:Column offset="1" size="9">
				<b:TabPanel tabPosition="left" ui:field="accountDetailsTab">
					<b:Tab ui:field="basicInfoTab" heading="About" active="true" >
						<b:Row addStyleNames="{style.basicInfoTab}">
							<b:Column size="6">
								<g:HTMLPanel addStyleNames="{style.basicInfoPanel}">
									<div class="profile_section_heading">
										<span>Basic Info</span>
										<g:HTMLPanel addStyleNames="{style.popoverText}">
											<b:Popover text="Tell us about your self in few words"
												heading="help">
												<g:Anchor addStyleNames="{style.popoverLink}">learn more</g:Anchor>
											</b:Popover>
										</g:HTMLPanel>
									</div>
									<div class="{style.profileInfoBlock}">
										<div>
											<div class="{style.non_editable}">
												<span class="{style.label}">Name</span>
												<div>
													<span ui:field="firstname" />&nbsp;
													<span ui:field="lastname" />
												</div>
											</div>
											<div class="{style.non_editable}">
												<span class="{style.label}">Email</span>
												<div>
												<span ui:field="email" />
												</div>
											</div>
										</div>
										<div class="{style.profileInfoBlock}">
											<b:ControlGroup ui:field="introductionCg">
												<b:Controls>
													<g:Label addStyleNames="{style.label}">Introduction</g:Label>
													<b:TextArea ui:field="introduction"
														addStyleNames="{style.introductionTextBox}" placeholder="tell us about yourself..." />
													<b:HelpInline ui:field="introductionError"></b:HelpInline>
												</b:Controls>
											</b:ControlGroup>
										</div>
									</div>
								</g:HTMLPanel>
							</b:Column>
							<b:Column size="4">
								<g:HTMLPanel addStyleNames="{style.uploadProfileImagePanel}">
									<g:HTMLPanel addStyleNames="{style.profileImagePanel}">
										<b:Image ui:field="profileImagePreview" addStyleNames="{style.profileImage}" />
									</g:HTMLPanel>
									<g:FormPanel ui:field="uploadForm">
										<g:HTMLPanel>
											<g:FileUpload ui:field="uploadField" name="image" />
										</g:HTMLPanel>
									</g:FormPanel>
								</g:HTMLPanel>
							</b:Column>
						</b:Row>
					</b:Tab>
					<b:Tab ui:field="occupationTab" heading="Occupation">
						<g:HTMLPanel>
							<div class="profile_section_heading">
								<span>Occupation</span>
								<g:HTMLPanel addStyleNames="{style.popoverText}">
									<b:Popover text="Tell us about your profession"
										heading="help">
										<g:Anchor addStyleNames="{style.popoverLink}">learn more</g:Anchor>
									</b:Popover>
								</g:HTMLPanel>
							</div>
							<b:ControlGroup ui:field="occupationCg">
								<b:Controls>
									<g:Label addStyleNames="{style.label}">Occupation</g:Label>
									<b:TextBox ui:field="occupation" placeholder="occupation..." />
									<b:HelpInline ui:field="occupationError"></b:HelpInline>
								</b:Controls>
							</b:ControlGroup>
						</g:HTMLPanel>
					</b:Tab>
					<b:Tab ui:field="interestTab" heading="Interests">
						<g:HTMLPanel>
							<div class="profile_section_heading">
								<span>Select your interests</span>
								<g:HTMLPanel addStyleNames="{style.popoverText}">
									<b:Popover text="Tell us about your interests"
										heading="help">
										<g:Anchor addStyleNames="{style.popoverLink}">learn more</g:Anchor>
									</b:Popover>
								</g:HTMLPanel>
							</div>
							<g:HTMLPanel ui:field="interestTabPanel"
								addStyleNames="{style.container}">
							</g:HTMLPanel>
						</g:HTMLPanel>
					</b:Tab>
					<b:Tab ui:field="locationTab" heading="Location">
						<g:HTMLPanel>
							<div class="profile_section_heading">
								<span>Location</span>
								<g:HTMLPanel addStyleNames="{style.popoverText}">
									<b:Popover
										text="Currently locations can't be changed, please email us directly if you need to change address"
										heading="help">
										<g:Anchor addStyleNames="{style.popoverLink}">learn more</g:Anchor>
									</b:Popover>
								</g:HTMLPanel>
							</div>
							<g:HTMLPanel>
								<b:ControlGroup ui:field="neighborhoodCg">
									<b:Controls>
										<g:Label addStyleNames="{style.label}">Neighborhood</g:Label>
										<span ui:field="neighborhoodSpan" />
									</b:Controls>
								</b:ControlGroup>
							</g:HTMLPanel>
							<g:HTMLPanel>
								<b:ControlGroup ui:field="zipCg">
									<b:Controls>
										<g:Label addStyleNames="{style.label}">Zip</g:Label>
										<b:TextBox ui:field="zip" placeholder="zip..." />
									</b:Controls>
								</b:ControlGroup>
							</g:HTMLPanel>
						</g:HTMLPanel>
					</b:Tab>
					<b:Tab ui:field="privacyTab" heading="Privacy">
						<g:HTMLPanel>
							<div class="profile_section_heading">
								<span>Select your privacy settings</span>
								<g:HTMLPanel addStyleNames="{style.popoverText}">
									<b:Popover
										text="You can choose to make certain attributes of your profile public, private or visible to 
								    only people within your community"
										heading="help">
										<g:Anchor addStyleNames="{style.popoverLink}">learn more</g:Anchor>
									</b:Popover>
								</g:HTMLPanel>
							</div>
							<g:HTMLPanel ui:field="privacyPanel" addStyleNames="{style.container}">
							</g:HTMLPanel>
						</g:HTMLPanel>
					</b:Tab>
					<b:Tab ui:field="notification" heading="Notification">
						<g:HTMLPanel>
							<div class="profile_section_heading">
								<span>Select your notificaiton settings</span>
								<g:HTMLPanel addStyleNames="{style.popoverText}">
									<b:Popover
										text="You can choose to get email notifications for certain types of messages within your community"
										heading="help">
										<g:Anchor addStyleNames="{style.popoverLink}">learn more</g:Anchor>
									</b:Popover>
								</g:HTMLPanel>
							</div>
							<g:HTMLPanel ui:field="notificationPanel">
							</g:HTMLPanel>
						</g:HTMLPanel>
					</b:Tab>
					<b:Tab ui:field="passwordTab" heading="Password Reset">
						<g:HTMLPanel>
							<div class="profile_section_heading">
								<span>Reset your password</span>
							</div>
							<b:ControlGroup ui:field="passwordCg">
								<b:Controls>
									<g:Label addStyleNames="{style.label}">Old Password</g:Label>
									<b:PasswordTextBox ui:field="password"
										placeholder="Old password..." />
									<b:HelpInline ui:field="passwordError"></b:HelpInline>
								</b:Controls>
							</b:ControlGroup>
							<b:ControlGroup ui:field="newPasswordCg">
								<b:Controls>
									<g:Label addStyleNames="{style.label}">New Password</g:Label>
									<b:PasswordTextBox ui:field="newPassword"
										placeholder="New password..." />
									<b:HelpInline ui:field="newPasswordError"></b:HelpInline>
								</b:Controls>
							</b:ControlGroup>
							<b:ControlGroup ui:field="confirmNewPasswordCg">
								<b:Controls>
									<g:Label addStyleNames="{style.label}">Confirm new password</g:Label>
									<b:PasswordTextBox ui:field="confirmNewPassword"
										placeholder="confirm new password..." />
									<b:HelpInline ui:field="confirmNewPasswordError"></b:HelpInline>
								</b:Controls>
							</b:ControlGroup>
							<b:Button addStyleNames="{style.updatePasswordBtn}"
								ui:field="updatePasswordBtn">Update password</b:Button>
						</g:HTMLPanel>
					</b:Tab>
				</b:TabPanel>
				<g:HTMLPanel ui:field="buttonsPanel" addStyleNames="{style.buttonsPanel}">
					<b:Button type="PRIMARY" ui:field="saveBtn">Save</b:Button>
					<b:Button ui:field="cancelBtn">Cancel</b:Button>
				</g:HTMLPanel>
			</b:Column>
		</b:FluidRow>
	</b:FluidContainer>
</ui:UiBinder> 