<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" xmlns:dt="urn:import:com.ziplly.app.client.widget"
	xmlns:dv="urn:import:com.ziplly.app.client.view.coupon" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="accountview.css"
		type="com.ziplly.app.client.view.BusinessAccountView.Style" />
	<ui:style field="bstyle">
		.locationDiv {
		width:300px;
		height:270px;
		padding: 4px;
		}
		.profileInfoBoxHeading {
		font-size: 24px;
		border-bottom: 2px solid #ddd;
		text-align: center;
		}
		.transparentColumn {
		opacity: .95;
		}
		.center {
		text-align: center;
		}
		.businessAttribtue {
		color: #555;
		font-weight: 600;
		}
	</ui:style>
	<b:FluidContainer addStyleNames="{style.rootPanel}"
		ui:field="container">
		<b:FluidRow>
			<b:Column size="10" ui:field="messageSection" addStyleNames="{style.colSpan}">
				<b:Alert ui:field="message" close="false" />
			</b:Column>
		</b:FluidRow>
		<b:FluidRow ui:field="profileSectionRow">
			<b:Column size="3" addStyleNames="{bstyle.transparentColumn} {style.colSpan}">
				<g:HTMLPanel>
					<div>
						<div>
							<g:HTMLPanel ui:field="profileImagePanel"
								addStyleNames="{style.profileImageSection}">
								<div class="{style.profileImageDiv}">
									<b:Image ui:field="profileImage" />
								</div>
								<h3 class="{style.profileCaption}" ui:field="name" />
							</g:HTMLPanel>
							<div class="{style.profileInfoBox}">
								<h3 ui:field="businessName" class="{bstyle.profileInfoBoxHeading}" />
								<b:Paragraph ui:field="description" addStyleNames="{style.description}" />
								<div class="{style.businessInfoItem}">
									<b:Label>Neigborhood</b:Label>
									<span class="{bstyle.businessAttribtue}" ui:field="neighborhoodName" />
								</div>
								<div class="{style.businessInfoItem}">
									<b:Label>Business Type</b:Label>
									<span ui:field="businessCategory"
										class="{style.description} {bstyle.businessAttribtue}" />
								</div>
								<div class="{style.businessInfoItem}">
									<b:Label>Email</b:Label>
									<g:Anchor ui:field="emailLink">
										<span ui:field="email" addStyleNames="{style.description}" />
									</g:Anchor>
								</div>
								<div class="{style.businessInfoItem}">
									<b:Label>Phone</b:Label>
									<span ui:field="phoneSpan"
										class="{style.description} {bstyle.businessAttribtue}" />
								</div>
								<div class="{style.businessInfoItem}">
									<b:Label>Website</b:Label>
									<g:Anchor ui:field="websiteLink">
										<span ui:field="websiteSpan"
											class="{style.description} {bstyle.businessAttribtue}" />
									</g:Anchor>
								</div>
								<div class="{style.businessInfoItem}">
									<span>
										<b:Label>Price range</b:Label>
										<dt:PriceRangeWidget ui:field="priceRangeWidget" />
									</span>
								</div>
								<div class="{style.businessInfoItem}">
									<b:Label addStyleNames="{style.leftAlignedLabel}">Parking</b:Label>
									<g:HTMLPanel ui:field="parkingAvailableSpan"
										addStyleNames="{style.leftAlignedPanel}" />
								</div>
								<div class="{style.businessInfoItem}">
									<b:Label addStyleNames="{style.leftAlignedLabel}">Wifi</b:Label>
									<g:HTMLPanel ui:field="wifiAvailableSpan"
										addStyleNames="{style.leftAlignedPanel}" />
								</div>
								<div class="{style.businessInfoItem}">
									<span>
										<b:Label>Last login</b:Label>
										<span ui:field="lastLoginTime" />
									</span>
								</div>
								<div>
									<b:Button block="true" ui:field="sendMsgBtn">Send Message</b:Button>
								</div>
							</div>
							<div class="{style.profileInfoBox}">
								<h2 class="heading">Address</h2>
								<g:HTMLPanel ui:field="addressPanel" addStyleNames="{style.addressPanel}">
									<span ui:field="formattedAddress" />
								</g:HTMLPanel>
							</div>
							<div class="{style.profileInfoBox}">
								<div ui:field="locationDiv" class="{bstyle.locationDiv}"></div>
							</div>
							<g:HTMLPanel addStyleNames="{style.profileInfoBox} {style.smallfont}">
								<h2 class="heading">Hours of operation</h2>
								<span>
									Monday&nbsp;
									<span ui:field="mondayStart" />
									-
									<span ui:field="mondayEnd" />
									<br />
									Tuesday&nbsp;
									<span ui:field="tuesdayStart" />
									-
									<span ui:field="tuesdayEnd" />
									<br />
									Wednesday&nbsp;
									<span ui:field="wednesdayStart" />
									-
									<span ui:field="wednesdayEnd" />
									<br />
									Thursday&nbsp;
									<span ui:field="thursdayStart" />
									-
									<span ui:field="thursdayEnd" />
									<br />
									Friday&nbsp;
									<span ui:field="fridayStart" />
									-
									<span ui:field="fridayEnd" />
									<br />
									Saturday&nbsp;
									<span ui:field="saturdayStart" />
									-
									<span ui:field="saturdayEnd" />
									<br />
									Sunday&nbsp;
									<span ui:field="sundayStart" />
									-
									<span ui:field="sundayEnd" />
									<br />
								</span>
							</g:HTMLPanel>
							<div class="{style.profileInfoBox}">
								<h2 class="heading">Activity</h2>
								<dt:ProfileStatWidget title="Messages"
									ui:field="tweetCountWidget" addStyleNames="{style.accountStatDiv}" />
								<dt:ProfileStatWidget title="Comments"
									ui:field="commentCountWidget" addStyleNames="{style.accountStatDiv}" />
								<dt:ProfileStatWidget title="Likes"
									ui:field="likeCountWidget" addStyleNames="{style.accountStatDiv}" />
							</div>
						</div>
					</div>
				</g:HTMLPanel>
			</b:Column>
			<b:Column size="6" addStyleNames="{bstyle.transparentColumn} {style.colSpan}">
				<g:HTMLPanel ui:field="tweetSection" addStyleNames="{style.tweetSection}">
					<g:HTMLPanel ui:field="tweetBoxDiv" addStyleNames="{style.tweetBoxDiv}">
						<dt:TweetBox ui:field="tweetBox" />
					</g:HTMLPanel>
				</g:HTMLPanel>
				<g:HTMLPanel ui:field="couponTransactionPanel"
					addStyleNames="{style.tweetSection}">
					<dv:CouponTransactionView ui:field="couponTransactionView" />
				</g:HTMLPanel>
			</b:Column>
			<b:Column size="2" addStyleNames="{style.colSpan}">
				<g:HTMLPanel ui:field="accountUpdatePanel">
					<b:AlertBlock type="INFO" heading="Updates" close="false"
						ui:field="updateAlertBlock" addStyleNames="{style.updateAlertBlock}">
					</b:AlertBlock>
				</g:HTMLPanel>
			</b:Column>
		</b:FluidRow>
	</b:FluidContainer>
</ui:UiBinder> 