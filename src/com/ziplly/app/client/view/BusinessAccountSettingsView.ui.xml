<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" xmlns:dt="urn:import:com.ziplly.app.client.widget"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style field="astyle" src="accountview.css" />
	<ui:style
		type="com.ziplly.app.client.view.BusinessAccountSettingsView.Style">
		.settingsPanel {
		position: relative;
		float: left;
		width: 60%;
		border: 1px solid #ddd;
		margin-left: 1%;
		padding: 20px;
		}
		.uploadForm {
		position: absolute;
		top: 140px;
		right: 100px;
		height: 254px;
		width: 300px;
		padding: 6px;
		border: 1px solid #ddd;
		}
		.profileImage {
		position: absolute;
		top: -170px;
		left: 10px;
		width: 180px;
		height: 160px;
		border: 2px solid #ddd;
		}
		.uploadFormActionPanel {
		position: absolute;
		top: 180px;
		left: 10px;
		margin: 10px 0px;
		}
		.paymentDetailsSection {
		width: 96%;
		border: 2px solid #ddd;
		padding: 10px;
		overflow: auto;
		}
		.subscriptionPlanTablePanel {
		margin-bottom: 90px;
		}
		.subscriptionPlanTable {
		width: 96%;
		}
		.subscriptionPlanTablePanelMessage {
		color: #555;
		font-size: 15px;
		padding: 2px;
		}
		.subscriptionPlanWidget {
		float: left;
		margin: 10px;
		margin-bottom: 0;
		width: 30%;
		}
		.horizontalDiv {
		clear: both;
		}
		.timeOpenLabel {
			diplay: block;
			float: left;
			line-height: 20px;
			margin: 6px 10px;
			width: 80px;
		}
		.timeOpenTextBox {
		float: left;
		width: 100px;
		height: 20px;
		margin-right: 20px;
		}
		.buttonPanel {
			clear: both;
		}
		.verticalDiv {
			margin: 6px 0;
			padding: 6px 0;
		}
	</ui:style>
	<g:HTMLPanel>
		<b:Alert ui:field="message" animation="true" />
		<g:HTMLPanel ui:field="asidePanel" addStyleNames="{astyle.asidePanel}">
			<dl>
				<dt>
					<g:Anchor addStyleNames="{astyle.link}" ui:field="profileLink">Profile</g:Anchor>
				</dt>
				<dt>
					<g:Anchor addStyleNames="{astyle.link}" ui:field="inboxLink">
						Inbox
						<span ui:field="unreadMessageCountField" />
					</g:Anchor>
				</dt>
			</dl>
		</g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.settingsPanel}">
			<b:TabPanel tabPosition="top" ui:field="settingPanel">
				<b:Tab heading="Business details" active="true">
					<g:HTMLPanel>
						<div class="heading">Account Details</div>
						<b:ControlGroup ui:field="businessNameCg">
							<b:Controls>
								<b:Label>Business name</b:Label>
								<br />
								<b:TextBox ui:field="businessName" placeholder="BusinessName..." />
								<b:HelpInline ui:field="businessNameError"></b:HelpInline>
							</b:Controls>
						</b:ControlGroup>
						<b:ControlGroup ui:field="street1Cg">
							<b:Controls>
								<b:Label>Street1</b:Label>
								<br />
								<b:TextBox ui:field="street1" placeholder="street1..." />
								<b:HelpInline ui:field="street1Error"></b:HelpInline>
							</b:Controls>
						</b:ControlGroup>
						<b:ControlGroup ui:field="street2Cg">
							<b:Controls>
								<b:Label>Street2</b:Label>
								<br />
								<b:TextBox ui:field="street2" placeholder="street2..." />
								<b:HelpInline ui:field="street2Error"></b:HelpInline>
							</b:Controls>
						</b:ControlGroup>
						<b:ControlGroup ui:field="zipCg">
							<b:Controls>
								<b:Label>Zip</b:Label>
								<br />
								<b:TextBox ui:field="zip" placeholder="zip..." />
								<b:HelpInline ui:field="zipError"></b:HelpInline>
							</b:Controls>
						</b:ControlGroup>
						<b:ControlGroup ui:field="websiteCg">
							<b:Controls>
								<b:Label>Website</b:Label>
								<br />
								<b:TextBox ui:field="website" placeholder="website..." />
								<b:HelpInline ui:field="websiteError"></b:HelpInline>
							</b:Controls>
						</b:ControlGroup>
						<g:FormPanel ui:field="uploadForm" addStyleNames="{style.uploadForm}">
							<g:HTMLPanel addStyleNames="{style.uploadFormActionPanel}">
								<g:FileUpload ui:field="uploadField" name="image" />
								<b:Button ui:field="uploadBtn">Upload</b:Button>
								<b:Icon type="UPLOAD" />
								<b:Image ui:field="profileImagePreview" addStyleNames="{style.profileImage}" />
							</g:HTMLPanel>
						</g:FormPanel>
						<b:ControlGroup ui:field="emailCg">
							<b:Controls>
								<b:Label>Email</b:Label>
								<br />
								<b:TextBox ui:field="email" placeholder="email..." />
								<b:HelpInline ui:field="emailError"></b:HelpInline>
							</b:Controls>
						</b:ControlGroup>
						<b:Controls>
						    <b:Label>Price Range</b:Label>
						    <br />
						    <b:ListBox ui:field="priceRangeListBox"></b:ListBox>
						</b:Controls>
						<div class="{style.verticalDiv}">
							<b:CheckBox ui:field="wifiAvailableCheckbox">Wifi Available</b:CheckBox>
							<b:CheckBox ui:field="parkingAvailableCheckbox">Parking Available</b:CheckBox>
						</div>
						
						<!-- Hours of operation -->
						<div class="heading">Hours of operation</div>
						<div class="{style.horizontalDiv}">
							<b:Label addStyleNames="{style.timeOpenLabel}">Monday</b:Label>
							<b:TextBox ui:field="mondayStart" addStyleNames="{style.timeOpenTextBox}"
								placeholder="startTime..." />
							<b:TextBox ui:field="mondayEnd" addStyleNames="{style.timeOpenTextBox}"
								placeholder="endTime..." />
						</div>
						<div class="{style.horizontalDiv}">
						    <b:Label addStyleNames="{style.timeOpenLabel}">Tuesday</b:Label>
							<b:TextBox ui:field="tuesdayStart" addStyleNames="{style.timeOpenTextBox}"
								placeholder="startTime..." />
							<b:TextBox ui:field="tuesdayEnd" addStyleNames="{style.timeOpenTextBox}"
								placeholder="endTime..." />
						</div>
						<div class="{style.horizontalDiv}">
						    <b:Label addStyleNames="{style.timeOpenLabel}">Wednesday</b:Label>
							<b:TextBox ui:field="wednesdayStart" addStyleNames="{style.timeOpenTextBox}"
								placeholder="startTime..." />
							<b:TextBox ui:field="wednesdayEnd" addStyleNames="{style.timeOpenTextBox}"
								placeholder="endTime..." />
						</div>
						<div class="{style.horizontalDiv}">
						    <b:Label addStyleNames="{style.timeOpenLabel}">Thursday</b:Label>
							<b:TextBox ui:field="thursdayStart" addStyleNames="{style.timeOpenTextBox}"
								placeholder="startTime..." />
							<b:TextBox ui:field="thursdayEnd" addStyleNames="{style.timeOpenTextBox}"
								placeholder="endTime..." />
						</div>
						<div class="{style.horizontalDiv}">
						    <b:Label addStyleNames="{style.timeOpenLabel}">Friday</b:Label>
							<b:TextBox ui:field="fridayStart" addStyleNames="{style.timeOpenTextBox}"
								placeholder="startTime..." />
							<b:TextBox ui:field="fridayEnd" addStyleNames="{style.timeOpenTextBox}"
								placeholder="endTime..." />
						</div>
						<div class="{style.horizontalDiv}">
						    <b:Label addStyleNames="{style.timeOpenLabel}">Saturday</b:Label>
							<b:TextBox ui:field="saturdayStart" addStyleNames="{style.timeOpenTextBox}"
								placeholder="startTime..." />
							<b:TextBox ui:field="saturdayEnd" addStyleNames="{style.timeOpenTextBox}"
								placeholder="endTime..." />
						</div>
						<div class="{style.horizontalDiv}">
						    <b:Label addStyleNames="{style.timeOpenLabel}">Sunday</b:Label>
							<b:TextBox ui:field="sundayStart" addStyleNames="{style.timeOpenTextBox}"
								placeholder="startTime..." />
							<b:TextBox ui:field="sundayEnd" addStyleNames="{style.timeOpenTextBox}"
								placeholder="endTime..." />
						</div>
						<div class="{style.buttonPanel}">
							<b:Button type="PRIMARY" ui:field="saveBtn">Save</b:Button>
							<b:Button ui:field="cancelBtn">Cancel</b:Button>
						</div>
					</g:HTMLPanel>
				</b:Tab>
				<b:Tab heading="Subscription Plans" ui:field="subscriptionTab">
					<g:HTMLPanel addStyleNames="{style.paymentDetailsSection}">
						<b:Alert ui:field="paymentStatus" />
						<g:HTMLPanel ui:field="subscriptionPlanTablePanel"
							addStyleNames="{style.subscriptionPlanTablePanel}">
						</g:HTMLPanel>
					</g:HTMLPanel>
				</b:Tab>
				<b:Tab heading="Transaction Details" ui:field="transactionDetailsTab">
					<g:HTMLPanel ui:field="transactionDetailsPanel">
					</g:HTMLPanel>
				</b:Tab>
				<b:Tab heading="Password Reset">
					<b:ControlGroup ui:field="passwordCg">
						<b:Controls>
							<g:Label addStyleNames="{astyle.label}">Old Password</g:Label>
							<b:PasswordTextBox ui:field="password"
								placeholder="Old password..." />
							<b:HelpInline ui:field="passwordError"></b:HelpInline>
						</b:Controls>
					</b:ControlGroup>
					<b:ControlGroup ui:field="newPasswordCg">
						<b:Controls>
							<g:Label addStyleNames="{astyle.label}">New Password</g:Label>
							<b:PasswordTextBox ui:field="newPassword"
								placeholder="New password..." />
							<b:HelpInline ui:field="newPasswordError"></b:HelpInline>
						</b:Controls>
					</b:ControlGroup>
					<b:ControlGroup ui:field="confirmNewPasswordCg">
						<b:Controls>
							<g:Label addStyleNames="{astyle.label}">Confirm new password</g:Label>
							<b:PasswordTextBox ui:field="confirmNewPassword"
								placeholder="confirm new password..." />
							<b:HelpInline ui:field="confirmNewPasswordError"></b:HelpInline>
						</b:Controls>
					</b:ControlGroup>
					<b:Button addStyleNames="{astyle.updatePasswordBtn}"
						ui:field="updatePasswordBtn">Update password</b:Button>
				</b:Tab>
			</b:TabPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 