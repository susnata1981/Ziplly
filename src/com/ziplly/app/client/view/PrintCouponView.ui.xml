<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.panel {
		position: relative;
		float:left;
		margin: auto;
		width: 50%;
		left: 25%;
		padding: 6px;
		border: 1px solid #ddd;
			background: linear-gradient(#ED1C25, #F2555C);
		}
		.panel .heading {
			margin-top: 140;
			text-align: center;
			background: #fff;
			border-bottom: 1px solid #555;
			color: #555;
		}
		.logo {
			position: absolute;
			left: 10px;
			top: 0;
		}
		.subheader {
			margin-top: 26px;
		}
		.inlinedFrame {
		border: none;
		clear: both;
		height: 300px;
		margin-top: 40px;
		}
		.block {
			float: left;
			margin-top: 20px;
			padding: 6px;
			font-size: 16px;
		}
		.panel .label {
			display: inline-block;
			margin-bottom: 10px;
			color: #fff !important;
		}
		.panel .panel h6 {
			margin: 30px 2px;
			color: #555 !important;
		}
		.finePrint {
			font-size: 12px !important;
			padding: 2px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panel}">
		<b:Image ui:field="logo" addStyleNames="{style.logo}" />
		<h6 class="{style.subheader}">connecting residents with businesses</h6>
		<b:Heading size="3" ui:field="title" addStyleNames="{style.heading}" />
		<div class="{style.block}">
			Merchant Name: <b:Label ui:field="businessName" addStyleNames="{style.label}"/>
			<br/>
		    Merchant Address: <b:Label ui:field="businessAddress" addStyleNames="{style.label}"/>
		    <br/>
		    Phone: <b:Label ui:field="businessPhone" addStyleNames="{style.label}"/>
		    <br/>
		    Discount: <b:Label ui:field="discount" addStyleNames="{style.label}"/>
			<br/>
			Price: <b:Label ui:field="price" addStyleNames="{style.label}"/>
			<br/>
			Start Date: <b:Label ui:field="startDate" addStyleNames="{style.label}"/>
			<br/>
			End Date: <b:Label ui:field="endDate" addStyleNames="{style.label}"/>
			<br/>
			Number of coupons allowed per person: <b:Label ui:field="totalCouponsAllowerPerPerson" addStyleNames="{style.label}"/>
			<br/>
		</div>
		
		<iframe ui:field="frame"
			style="position: relative; display:block; border: 0; height: 300px; margin:auto; margin-top : 10px"></iframe>
		
		<div class="{style.block}">
		    <h5>Terms and conditions</h5><hr/>
			<span ui:field="termsAndConditionLabel" addStyleNames="{style.finePrint}"></span>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 