<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.panel {
		position: relative;
		float:left;
		margin: auto;
		width: 50%;
		left: 25%;
		padding: 6px;
		border: 1px solid #ddd;
		color: #fff;
		background: linear-gradient(#ED1C25, #F2555C);
		border: 20px dotted #555;
		}
		.heading_large {
			display: block;
			font-size: 42px;
			font-color: #fff;
			text-align: center;
			margin-bottom: 30px;
		}
		.heading_medium {
			display: block;
			font-size: 18px;
			font-color: #fff;
			text-align: center;
			margin-bottom: 10px;
		}
		.panel .heading {
			margin-top: 140;
			text-align: center;
			color: #fff;
			border-bottom: 1px solid #555;
			text-align: center;
		}
		.logo {
			position: absolute;
			left: 10px;
			top: 0;
		}
		.subheader {
			margin-top: 26px;
		}
		.inlinedFrame {
		border: none;
		clear: both;
		height: 300px;
		margin-top: 40px;
		}
		.block {
			float: left;
			margin-top: 20px;
			padding: 6px;
			font-size: 16px;
		}
		.panel .whitelabel {
			display: inline-block;
			margin-bottom: 10px;
			color: #fff !important;
			font-size: 19px !important;
		}
		.panel h6 {
			margin: 30px 2px;
		}
		.finePrint {
			font-size: 12px !important;
			padding: 2px;
		}
		.white-font {
			color: #fff !important;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panel}">
		<b:Image ui:field="logo" addStyleNames="{style.logo}" />
		<b:Heading size="6" addStyleNames="{style.subheader}">connecting residents with businesses</b:Heading>
		<span class="{style.heading_large}">
		    <span ui:field="price" class="white-font" />
		    <span> cash voucher</span>
		</span>
		<span ui:field="title" class="{style.heading_medium} white-font" />
		<div class="{style.block}">
			<i>Merchant Name</i> <b:Label ui:field="businessName" addStyleNames="{style.whitelabel}"/>
			<br/>
		    <i>Merchant Address</i> <b:Label ui:field="businessAddress" addStyleNames="{style.whitelabel}"/>
		    <br/>
		    <i>Phone</i> <b:Label ui:field="businessPhone" addStyleNames="{style.whitelabel}"/>
		    <br/>
		    <i>Price paid</i> <b:Label ui:field="discount" addStyleNames="{style.whitelabel}"/>
			<br/>
			<br/>
			<i>Start Date</i> <b:Label ui:field="startDate" addStyleNames="{style.whitelabel}"/>
			<br/>
			<i>End Date</i> <b:Label ui:field="endDate" addStyleNames="{style.whitelabel}"/>
			<br/>
			<i>Number of coupons allowed per person</i> <b:Label ui:field="totalCouponsAllowerPerPerson" addStyleNames="{style.whitelabel}"/>
			<br/>
		</div>
		
		<iframe ui:field="frame"
			style="position: relative; display:block; border: 0; height: 300px; margin:auto; margin-top : 10px"></iframe>
		
		<div class="{style.block}">
		    <h5>Terms and conditions</h5><hr/>
			<span ui:field="termsAndConditionLabel" class="{style.finePrint}"></span>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 