<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" xmlns:cell="urn:import:com.google.gwt.user.cellview.client"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.heading {
			color: #555;
		}
		.listBox {
		display: block;
		width: 170px;
		font-size: 14px !important;
		}
		.filterLabel {
		display: block;
		font-size:
		1em;
		padding: 4px;
		}
		.filterPanel {
		background: #f1f1f1;
		padding: 20px;
		width: 75%;
		opacity: .90;
		margin-top: 30px;
		}
		.residentListPanel {
			background: #f1f1f1;
			opacity: .85;
		}
		.inputControlGroup {
		margin-bottom: 10px;
		}
		.textBox {
		width: 160px !important;
		height: 34px !important;
		margin: 0 !important;
		}
		.colSpan {
			max-width: 90%;
		}
	</ui:style>

	<b:FluidContainer>
		<b:FluidRow>
			<b:Column offset="3" size="7" addStyleNames="{style.colSpan}">
				<b:Alert ui:field="message" close="false" addStyleNames="messageBlock" />
			</b:Column>
		</b:FluidRow>
		<b:FluidRow>
			<b:Column size="3" addStyleNames="{style.colSpan}">
				<g:HTMLPanel addStyleNames="{style.filterPanel}">
					<h4 class="{style.heading}">Find Businesses</h4>
					<b:ControlGroup ui:field="zipCg" addStyleNames="{style.inputControlGroup}">
						<b:Controls>
							<b:TextBox ui:field="zipTextBox" placeholder="zip..."
								addStyleNames="{style.textBox}" />
							<b:HelpInline ui:field="zipError"></b:HelpInline>
						</b:Controls>
					</b:ControlGroup>
					<div>
						<span class="{style.filterLabel}">Select neighborhood</span>
						<b:ListBox ui:field="neighborhoodListBox" addStyleNames="{style.listBox}" />
					</div>
					<b:Button size="SMALL" ui:field="searchBtn">Search</b:Button>
					<b:Button size="SMALL" ui:field="resetBtn">Reset</b:Button>
				</g:HTMLPanel>
			</b:Column>
			<b:Column size="8" addStyleNames="{style.colSpan}">
				<b:FluidRow>
					<b:Column offset="1" size="10">
						<cell:SimplePager ui:field="pager" />
					</b:Column>
				</b:FluidRow>
				<b:FluidRow>
					<b:Column size="10" addStyleNames="{style.residentListPanel}">
						<cell:CellList ui:field="businessList" />
					</b:Column>
				</b:FluidRow>
			</b:Column>
		</b:FluidRow>
	</b:FluidContainer>
</ui:UiBinder> 