<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:with type="com.ziplly.app.client.resource.ZResources" field="res"/>
	<ui:style>
		.panel {
			width: 100%;
			-webkit-border-sizing: border-box;
		}
		figure {
		height: 200px;
		width: 30%;
		float: left;
		margin: 0;
		border: 1px solid #ddd;
		}
		.image {
		max-width: 100%;
		max-height: 100%;
		}
		.h3 {
			line-height: 26px;
			font-weight: 300;
		}
		.punchLine {
			color: #fff;
		}
		.description {
			float: left;
			width: 100%;
			padding: 6px;
			overflow: hidden;
			border: 1px solid #ddd;
			background: linear-gradient(#ED1C25, #F2555C);
		}
		.description p {
			font-size: 16px;
		}
		.buttonDiv {
			clear: both;
		}
		.description span {
			display: inline-block;
			font-size: 20px;
			margin: 6px 0;
			color: #fff !important;
		}
		.description ul {
			margin: 0;
		}
		.description h1, h2, h4 {
			color: #fff !important;
			font-family: Calibri, Candara, Segoe, "Segoe UI", Optima, Arial, sans-serif;
			text-align: center;
		}
		.description ul li {
			list-style: none;
			font-size: 18px;
			font-family: "Lucida Sans Typewriter", "Lucida Console", Monaco, "Bitstream Vera Sans Mono", monospace;
			margin-bottom: 10px;
		}
		.description .fineprint {
			font-size: 12px !important;
		}
		.borderBottom {
			padding-bottom: 2px !important;
			border-bottom: 1px solid #fff;
		}
		.left {
			float: left;
		}
		.right {
			float: right;
		}
		.buyBtn {
			opacity: 1 !important;
			padding: 0 !important;
			background-image: block;
		}
		.buyBtn:hover {
			-webkit-transition: none !important;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panel}">
		<figure ui:field="figure">
			<g:Image ui:field="image" addStyleNames="{style.image}" />
		</figure>
		<div class="{style.description}">
			<b:Heading size="2" ui:field="punchLine" addStyleNames="{style.punchLine}"></b:Heading>
			<p>
			    <b:Label>Description</b:Label>
				<span ui:field="couponDescription"></span>
			</p>
			<p>
				<span ui:field="expirationShortTime"></span>
			</p>
			<div ui:field="couponDetails">
				<ul>
				    <li>
					    <b:Label>Business name</b:Label>
						<span ui:field="businessName" />
						<g:Anchor ui:field="businessNameAnchor" addStyleNames="smalltext">website</g:Anchor>
					</li>
					<li>
					    <b:Label>Address</b:Label>
						<span ui:field="address" />
					</li>
					<li>
					    <b:Label>Business type</b:Label>
						<span ui:field="businessType" />
					</li>
					<li>
					    <b:Label>Website</b:Label>
						<span ui:field="website" />
					</li>
					<li>
						<b:Label>Quantity sold</b:Label>
						<span ui:field="quantitySold" />
					</li>
					<li>
						<b:Label>Quantity remaining</b:Label>
						<span ui:field="quantityRemaining" />
					</li>
					<li>
					    <b:Label>Expires on</b:Label>
						<span ui:field="expirationTime" />
					</li>
					<li>
					    <b:Label>Fine print</b:Label>
						<span class="{style.fineprint}" ui:field="finePrint" />
					</li>
				</ul>
			</div>
			<div class="{style.buttonDiv}">
			    <b:Button type="INFO" addStyleNames="{style.left}" ui:field="learnButton">Learn more</b:Button>
			    <b:Button type="INFO" addStyleNames="{style.left}" ui:field="hideDetailsButton">Hide</b:Button>
				<g:Button addStyleNames="{style.right} {style.buyBtn} {res.style.googleBuyButtonImage}" ui:field="buyButton"/>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 