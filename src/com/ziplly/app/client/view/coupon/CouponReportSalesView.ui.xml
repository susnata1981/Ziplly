<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
	xmlns:dv="urn:import:com.ziplly.app.client.view.coupon" 
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.heading {
		height: 30px;
		line-height: 30px;
		font-weight: 400;
		padding: 4px;
		background: #ddd;
		color: #bbb;
		font-family: Verdata, sans;
	}
	ul {
		margin: 10px 0;
	}
	ul > li {
		list-style: none;
		font-size: 15px;
		font-weight: 500;
		line-height: 24px;
		padding: 2px;
	}
	.refreshBtn {
		float: right;
		margin: 4px;
	}
	.metricLabel {
		display: block;
		width: 200px;
		padding: 6px;
		margin: 10px 0;
		background: #ddd;
	}
	</ui:style>
	<b:FluidContainer>
		<b:FluidRow>
			<b:Column size="11">
				<g:HTMLPanel>
					<b:Heading size="4" addStyleNames="{style.heading}">List of coupons
						published</b:Heading>
					<b:Button size="SMALL" ui:field="refreshBtn" addStyleNames="{style.refreshBtn}">Refresh</b:Button>
					<b:Alert ui:field="message" close="false" />
					<b:SimplePager ui:field="pager" display="{couponReportTable}"
						fastForwardRows="15" />
					<b:CellTable ui:field="couponReportTable" bordered="true"
						striped="true" />
				</g:HTMLPanel>
			</b:Column>
		</b:FluidRow>
		<b:FluidRow>
			<b:Column size="11">
				<g:HTMLPanel>
					<g:HTMLPanel ui:field="couponTransactionDetailsPanel">
						<b:Heading size="4" addStyleNames="{style.heading}"
							ui:field="couponTransactionDetailsHeading" />
						<div>
							<!-- <b:Heading size="4">Summary</b:Heading><hr/> -->
							<ul>
								<li>
									<span class="{style.metricLabel}">Coupons Sold</span>
									<b:Label ui:field="totalCouponsSoldLabel" />
								</li>
								<li>
									<span class="{style.metricLabel}">Total Sales Amount</span>
									<b:Label ui:field="totalSalesLabel" />
								</li>
								<li>
									<span class="{style.metricLabel}">Total fees</span>
									<b:Label ui:field="totalFee" />
								</li>
								<li>
									<span class="{style.metricLabel}">Total Coupons Redeemed</span>
									<b:Label ui:field="totalCouponsRedeemed" />
								</li>
								<li>
									<span class="{style.metricLabel}">Total Coupons Unused</span>
									<b:Label ui:field="totalCouponsUnused" />
								</li>
							</ul>
						</div>
						<!-- <dv:CouponTransactionTableWidget
							ui:field="couponTransactionTableWidget" /> -->
						<g:HTMLPanel>
						    <b:ListBox ui:field="chartTypeListBox" />
						    <g:HTMLPanel ui:field="chartsPanel">
						        
						    </g:HTMLPanel>
						</g:HTMLPanel>
					</g:HTMLPanel>
				</g:HTMLPanel>
			</b:Column>
		</b:FluidRow>
		</b:FluidContainer>
</ui:UiBinder> 