<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" xmlns:dv="urn:import:com.ziplly.app.client.view.coupon"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.heading {
		height: 30px;
		line-height: 30px;
		font-weight: 400;
		padding: 4px;
		background: #ddd;
		color: #bbb;
		font-family: Verdata, sans;
		}
		ul {
		margin: 10px 0;
		}
		ul > li {
		list-style: none;
		font-size: 15px;
		font-weight: 500;
		line-height:
		24px;
		padding: 2px;
		}
		.refreshBtn {
		float:
		right;
		margin: 4px;
		}
		.metricLabel {
		display: block;
		width: 200px;
		padding:
		6px;
		margin: 10px 0;
		background:
		#ddd;
		}
	</ui:style>
	<b:FluidContainer>
		<b:FluidRow>
			<b:Column size="10">
				<g:HTMLPanel>
					<b:ListBox ui:field="chartTypeListBox" />
					<b:Heading size="4" ui:field="chartTitle" />
					<g:HTMLPanel ui:field="chartsPanel">
					</g:HTMLPanel>
				</g:HTMLPanel>
			</b:Column>
			<b:Column size="2">
				<g:HTMLPanel>
					<g:HTMLPanel ui:field="couponTransactionDetailsPanel">
						<div>
 							<b:Heading size="4">Summary</b:Heading><hr/> 
							<ul>
								<li>
									<span class="{style.metricLabel}">Coupons Sold</span>
									<b:Label ui:field="totalCouponsSoldLabel"
										addStyleNames="numeric-font" />
									<span class="{style.metricLabel}">Total Sales Amount</span>
									<b:Label ui:field="totalSalesLabel" addStyleNames="numeric-font" />
								</li>
								<li>
									<span class="{style.metricLabel}">Total fees</span>
									<b:Label ui:field="totalFee" addStyleNames="numeric-font" />
								</li>
								<li>
									<span class="{style.metricLabel}">Total Coupons Redeemed</span>
									<b:Label ui:field="totalCouponsRedeemed" addStyleNames="numeric-font" />
								</li>
								<li>
									<span class="{style.metricLabel}">Total Coupons Unused</span>
									<b:Label ui:field="totalCouponsUnused" addStyleNames="numeric-font" />
								</li>
							</ul>
						</div>
						<!-- <dv:CouponTransactionTableWidget ui:field="couponTransactionTableWidget" 
							/> -->
					</g:HTMLPanel>
				</g:HTMLPanel>
			</b:Column>
		</b:FluidRow>
		<b:FluidRow>
			<b:Column size="11">
				<b:Alert ui:field="message" close="false" />
				<g:HTMLPanel>
					<b:Heading size="4" addStyleNames="{style.heading}">List of coupons
						published</b:Heading>
					<br />
					<b:ButtonToolbar>
						<b:ButtonGroup>
							<b:Button ui:field="newCouponBtn">New Coupon</b:Button>
							<b:Button ui:field="refreshBtn">Refresh</b:Button>
						</b:ButtonGroup>
					</b:ButtonToolbar>
					<!-- <b:Button size="SMALL" ui:field="refreshBtn" addStyleNames="{style.refreshBtn}">Refresh</b:Button> -->
					<b:SimplePager ui:field="pager" display="{couponReportTable}"
						fastForwardRows="15" />
					<b:CellTable ui:field="couponReportTable" bordered="true"
						striped="true" />
				</g:HTMLPanel>
			</b:Column>
		</b:FluidRow>
	</b:FluidContainer>
</ui:UiBinder> 