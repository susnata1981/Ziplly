<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:dt="urn:import:com.ziplly.app.client.widget"
	xmlns:dv="urn:import:com.ziplly.app.client.view.coupon" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<ui:style src="accountview.css" />
	<b:FluidContainer>
		<b:FluidRow>
			<b:Column size="9" addStyleNames="{style.colSpan}">
				<b:Alert ui:field="message" close="false" addStyleNames="messageBlock" />
			</b:Column>
		</b:FluidRow>
		<b:FluidRow ui:field="profileSectionRow">
			<b:Column size="3" addStyleNames="{style.colSpan}">
				<g:HTMLPanel>
					<div class="{style.profileImageSection} {style.profileInfoBox}">
						<g:HTMLPanel addStyleNames="{style.profileImageDiv}"
							ui:field="profileImagePanel">
							<b:Image ui:field="profileImage" />
						</g:HTMLPanel>
						<b:Heading size="3" addStyleNames="{style.profileCaption}"
							ui:field="name" />
						<b:Button block="true" ui:field="sendMsgBtn">Send Personal Message</b:Button>
						<b:Button block="true" ui:field="inviteBtn">Invite people</b:Button>
					</div>
					<div class="{style.profileInfoBox}">
						<span class="{style.profileInfoHeader}">About Me</span>
						<b:Paragraph ui:field="description" addStyleNames="{style.description}" />
						<div addStyleNames="{style.description}">
							Email:
							<g:Anchor ui:field="emailLink">
								<span ui:field="email" addStyleNames="{style.description}" />
							</g:Anchor>
						</div>
						<div addStyleNames="{style.description}">
							<span>
								Gender:
								<span ui:field="gender" />
							</span>
						</div>
						<div addStyleNames="{style.description}">
							Badge:
							<g:HTMLPanel ui:field="badgePanel" addStyleNames="{style.badgePanel}" />
						</div>
						<div addStyleNames="{style.description}">
							<span>
								Last login:
								<span ui:field="lastLoginTime" />
							</span>
						</div>
					</div>
					<div class="{style.profileInfoBox}">
						<span class="{style.profileInfoHeader}">Occupation</span>
						<span ui:field="occupationSpan" />
					</div>
					<div class="{style.profileInfoBox}">
						<span class="{style.profileInfoHeader}">Interests</span>
						<g:HTMLPanel ui:field="interestPanel"></g:HTMLPanel>
					</div>
					<div class="{style.profileInfoBox}">
						<div style="width:320px; height:270px" ui:field="locationDiv">
						</div>
					</div>
					<div class="{style.profileInfoBox}">
						<span class="{style.profileInfoHeader}">Activity</span>
						<dt:ProfileStatWidget title="Messages"
							ui:field="tweetCountWidget" addStyleNames="{style.accountStatDiv}" />
						<dt:ProfileStatWidget title="Comments"
							ui:field="commentCountWidget" addStyleNames="{style.accountStatDiv}" />
						<dt:ProfileStatWidget title="Likes" ui:field="likeCountWidget"
							addStyleNames="{style.accountStatDiv}" />
					</div>
				</g:HTMLPanel>
			</b:Column>
			<b:Column size="6" addStyleNames="{style.colSpan} {style.communitWallColumn}">
				<g:HTMLPanel ui:field="tweetSection" addStyleNames="{style.tweetSection_short}">
					<g:HTMLPanel ui:field="tweetBoxDiv" addStyleNames="{style.tweetBoxDiv}">
						<dt:TweetBox ui:field="tweetBox" />
					</g:HTMLPanel>
				</g:HTMLPanel>
				<g:HTMLPanel ui:field="couponTransactionPanel"
					addStyleNames="{style.tweetSection_short}">
					<dv:CouponTransactionView ui:field="couponTransactionView" />
				</g:HTMLPanel>
			</b:Column>
			<b:Column size="3" addStyleNames="{style.colSpan}">
				<g:HTMLPanel ui:field="accountUpdatePanel" addStyleNames="border-box-with-padding">
				    <h4 class="border-bottom-with-padding text-align-left">Pending actions</h4>
				</g:HTMLPanel>
			</b:Column>
		</b:FluidRow>
	</b:FluidContainer>
</ui:UiBinder> 