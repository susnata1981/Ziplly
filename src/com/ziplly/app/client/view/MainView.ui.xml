<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:dv="urn:import:com.ziplly.app.client.view"
	xmlns:dt="urn:import:com.ziplly.app.client.widget" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<ui:with type="com.ziplly.app.client.resource.ZResources"
		field="zresources" />
	<ui:with type="com.ziplly.app.client.widget.MyBundle" field="resource" />
	<ui:style field="mainViewStyle"
		type="com.ziplly.app.client.view.MainView.MainViewStyle">
		.mainContent {
		margin: 0;
		width: 100%;
		position: relative;
		top:
		-140px;
		}
		.mainPageSingupForm {
		width: 300px;
		margin-top: 2%;
		margin-right: 40px;
		float: right;
		text-align: center;
		border: 2px solid
		#fff;
		padding: 4px;
		}
		.mainPageBusinessSingupForm {
		clear: both;
		float:
		right;
		width: 300px;
		margin-top: 4%;
		margin-right: 40px;
		text-align:
		center;
		border: 2px solid #fff;
		padding: 4px;
		}
		#loginSection {
		height:
		50px;
		margin: auto;
		text-align: center;
		}
		.categoryHeading {
		text-align:center;
		background: #f3f3f3;
		}
		.logoutLnk {
		position: absolute;
		top: 10px;
		right:40px;
		}
		.individualProfilePerCategory {
		float: left;
		width: 330px;
		margin: 5px
		10px 20px 5px;
		}
		.categoryDetails {
		width: 800px;
		margin:
		auto;
		}
		.transparent {
		opacity:0.4;
		}
		.residentSignupDiv {
		margin-top:8px;
		height:
		auto;
		padding: 2px;
		font-size: 12px;
		font-family:
		helvetica;
		}
		.residentSignupLink {
		font-size: 12px;
		font-style: helvetica;
		height: 20px !important;
		background: none !important;
		}
		.fbLoginBtn {
		border: none;
		margin-left: 14px;
		}
		.smallHeroUnit {
			padding: 10px;
			text-align: center;
		}
		/********************************** Everything above needs to
		be deleted *************************************/
		.mainHeading {
		color:
		#fff;
		font-family: font-family: Papyrus, fantasy;
		text-align: center
		!important;
		}
		.form {
		width: 275px;
		}
		.mainViewPanel {
		margin-top: 8%;
		}
		.descriptionPanel
		{
		width:
		80%;
		padding: 1%;
		}
		.descriptionRow {
		padding-bottom: 6px;
		}
		.box {
		border: 2px solid #fff;
		background : #ddd;
		height: 100px;
		padding: 10px;
		text-align: center;
		color: #555444;
		border-radius: 10px;
		padding: 4px;
		}
	</ui:style>
	<b:FluidContainer addStyleNames="{mainViewStyle.mainViewPanel}">
		<b:FluidRow>
			<b:Column offset="2" size="4" addStyleNames="{mainViewStyle.mainHeading}">
				<b:Heading size="2">
					Ziplly,
				</b:Heading>
				<b:Heading size="3">
					connecting local community &amp;
					businesses
				</b:Heading>
			</b:Column>
			<b:Column size="6">
				<b:WellForm addStyleNames="{mainViewStyle.form}">
					<b:FluidRow>
						<b:Column size="11">
							<b:Alert ui:field="message" />
							<b:ControlGroup ui:field="emailCg">
								<b:Controls>
									<b:TextBox ui:field="email" placeholder="email..." />
									<b:HelpInline ui:field="emailError"></b:HelpInline>
								</b:Controls>
							</b:ControlGroup>
							<b:ControlGroup ui:field="passwordCg">
								<b:Controls>
									<b:PasswordTextBox ui:field="password"
										placeholder="password..." />
									<b:HelpInline ui:field="passwordError"></b:HelpInline>
								</b:Controls>
							</b:ControlGroup>
						</b:Column>
					</b:FluidRow>
					<b:FluidRow>
						<b:Column size="3">
							<b:Button type="SUCCESS" ui:field="loginBtn">SignIn</b:Button>
						</b:Column>
						<b:Column size="8">
							<g:Button ui:field="fbLoginButtonOnMainPage"
								addStyleNames="{mainViewStyle.fbLoginBtn} {zresources.style.fbBtnImage}"></g:Button>
						</b:Column>
					</b:FluidRow>
					<b:FluidRow>
						<b:Column size="12">
							<g:HTMLPanel ui:field="residentSignupPanel"
								addStyleNames="{mainViewStyle.residentSignupDiv}">
								<span>Not
									already a member, &nbsp;
									<g:Anchor ui:field="residentSignupLink"
										styleName="{mainViewStyle.residentSignupLink}">Resident
										Signup</g:Anchor>
									here
								</span>
							</g:HTMLPanel>
						</b:Column>
					</b:FluidRow>
				</b:WellForm>
			</b:Column>
		</b:FluidRow>
		<b:FluidRow>
			<b:Column offset="6" size="6">
				<b:WellForm addStyleNames="{mainViewStyle.form}">
					<b:ControlLabel>Business Signup</b:ControlLabel>
					<b:Button type="SUCCESS" ui:field="businessSignupBtn">Signup</b:Button>
				</b:WellForm>
				<g:HTMLPanel ui:field="descriptionPanel">
				</g:HTMLPanel>
			</b:Column>
		</b:FluidRow>
		<b:FluidRow addStyleNames="{mainViewStyle.descriptionRow}">
			<b:Column size="4">
				<b:Hero addStyleNames="{mainViewStyle.smallHeroUnit}">
				    <b:Icon type="FLAG" />
					<b:Heading size="3">
					      Private secure network
					</b:Heading>
				</b:Hero>
			</b:Column>
			<b:Column size="4">
				<b:Hero addStyleNames="{mainViewStyle.smallHeroUnit}">
				    <b:Icon type="FLAG" />
					<b:Heading size="3">
					      Meet your neighbor
					</b:Heading>
				</b:Hero>
			</b:Column>
			<b:Column size="4">
				<!-- <g:HTMLPanel addStyleNames="{mainViewStyle.box}">
					<b:Icon type="FLAG" />
					<b:Heading size="3">Get local business deals</b:Heading>
				</g:HTMLPanel> -->
				<b:Hero addStyleNames="{mainViewStyle.smallHeroUnit}">
				    <b:Icon type="FLAG" />
					<b:Heading size="3">
					      Get local business deals
					</b:Heading>
				</b:Hero>
			</b:Column>
		</b:FluidRow>
		<b:FluidRow>
			<b:Column offset="3" size="6">
				<b:Hero>
					<b:Heading size="4">Free signup for businesses untill July, 2014</b:Heading>
					<b:Paragraph>Basic plan allows 3 messages free/month</b:Paragraph>
					<b:Button type="SUCCESS" ui:field="businessSignupBtn2">Signup</b:Button>
				</b:Hero>
			</b:Column>
		</b:FluidRow>
	</b:FluidContainer>
</ui:UiBinder>