<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:dv="urn:import:com.ziplly.app.client.view"
	xmlns:dt="urn:import:com.ziplly.app.client.widget" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
	xmlns:cell="urn:import:com.google.gwt.user.cellview.client">

	<ui:with type="com.ziplly.app.client.resource.ZResources"
		field="zresources" />
	<ui:with type="com.ziplly.app.client.widget.MyBundle" field="resource" />
	<ui:style field="mainViewStyle"
		type="com.ziplly.app.client.view.MainView.MainViewStyle">
		#loginSection {
		height: 50px;
		margin: auto;
		text-align: center;
		}
		.categoryHeading {
		text-align:center;
		background: #f3f3f3;
		}
		.logoutLnk {
		position: absolute;
		top: 10px;
		right:40px;
		}
		.individualProfilePerCategory {
		float: left;
		width: 330px;
		margin: 5px
		10px 20px 5px;
		}
		.categoryDetails {
		width: 800px;
		margin:
		auto;
		}
		.transparent {
		opacity:0.4;
		}
	</ui:style>
	<g:HTMLPanel>
		<div id="mainHeading">
			<h1>	
			    <span class="bigtext">Ziplly</span><br/> 
			    connecting <br/> 
			    local community &amp; businesses</h1>
		</div>
		<div id="mainContent">
			<div class="{mainViewStyle.logoutLnk}">
				<b:Button ui:field="logoutBtn">Logout</b:Button>
			</div>
			<div id="loginSectionn">
				<!-- <dt:LoginWidget ui:field="loginWidget" /> -->
			</div>
			<div id="mainPageSingupForm">
				<b:WellForm>
					<b:ControlLabel>Signup</b:ControlLabel>
					<b:TextBox placeholder="email..." />
					<b:TextBox placeholder="zip..." />
					<b:TextBox placeholder="username..." />
					<b:TextBox placeholder="password..." />
					<b:Button type="SUCCESS" ui:field="signupBtn">Signup</b:Button>
					<b:Button type="WARNING" ui:field="fbLoginButtonOnMainPage">Facebook Login</b:Button>
				</b:WellForm>
			</div>
			<div class="{mainViewStyle.categoryDetails}">
				<g:HTMLPanel ui:field="categoryDetailsSection"></g:HTMLPanel>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
 