<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.tweetSearchForm {
		border: 1px solid #ddd;
		padding: 6px;
		}
		.longTextBox {
		width: 280px;
		}
		.row {
		overflow: auto;
		}
		.panel {
			margin-top: 20px;
		}
	</ui:style>
	<g:HTMLPanel>
		<b:Alert ui:field="message" />
		<b:TabPanel tabPosition="left" ui:field="tabPanel">
			<b:Tab heading="Accounts" active="true">
				<b:NavPills>
					<b:NavLink ui:field="accountSearchNavLink">Search</b:NavLink>
					<b:NavLink ui:field="registrationNavLink">Registration</b:NavLink>
				</b:NavPills>
				<g:HTMLPanel ui:field="accountSearchPanel">
					<b:FluidRow>
						<b:Column size="8">
							<b:FluidRow>
								<b:Column size="4">
									<b:TextBox ui:field="emailTextBox" placeholder="Email..."></b:TextBox>
								</b:Column>
								<b:Column size="4">
									<b:ControlGroup>
										<b:Controls>
											<b:ListBox ui:field="accountTypeTextBox">
											</b:ListBox>
										</b:Controls>
									</b:ControlGroup>
								</b:Column>
							</b:FluidRow>
							<b:ControlGroup>
								<b:Controls>
									<b:TextBox ui:field="nameTextBox" placeholder="Name..."></b:TextBox>
								</b:Controls>
							</b:ControlGroup>
							<b:ControlGroup>
								<b:Controls>
									<b:TextBox ui:field="zipTextBox" placeholder="zip..."></b:TextBox>
								</b:Controls>
							</b:ControlGroup>
							<b:FormActions>
								<b:Button type="PRIMARY" ui:field="accountSearchBtn">Search</b:Button>
								<b:Button ui:field="accountCancelBtn">Cancel</b:Button>
							</b:FormActions>
						</b:Column>
					</b:FluidRow>
					<b:FluidRow>
						<b:Column size="8">
							<g:HTMLPanel ui:field="accountsCellTablePanel">
							</g:HTMLPanel>
						</b:Column>
					</b:FluidRow>
				</g:HTMLPanel>
				<g:HTMLPanel ui:field="registrationPanel">
					<b:FluidRow>
						<b:Column size="4">
							<b:TextBox ui:field="emailInvitationTextBox"
								placeholder="email..."></b:TextBox>
							<b:ControlLabel>Account Type</b:ControlLabel>
							<b:Controls>
								<b:RadioButton ui:field="personalAccountType"
									name="accountTypeRadioButton">Personal</b:RadioButton>
								<b:RadioButton ui:field="businessAccountType"
									name="accountTypeRadioButton">Business</b:RadioButton>
								<g:HTMLPanel ui:field="businessTypePanel">
									<b:ListBox ui:field="businessTypeListBox" />
								</g:HTMLPanel>
							</b:Controls>
							<b:Button type="PRIMARY" ui:field="inviteBtn">Invite</b:Button>
						</b:Column>
					</b:FluidRow>
				</g:HTMLPanel>
			</b:Tab>
			<b:Tab heading="Tweets">
				<b:FluidRow>
					<b:Column size="8">
						<b:ControlGroup>
							<b:ControlGroup>
								<b:Controls>
									<b:TextBox ui:field="zipCode" placeholder="Zip..."></b:TextBox>
								</b:Controls>
							</b:ControlGroup>
							<b:Controls>
								<b:ControlLabel for="tweetCategoryListBox">Tweet
									category&nbsp;
								</b:ControlLabel>
								<b:ListBox multipleSelect="true" ui:field="tweetCategoryListBox">
								</b:ListBox>
							</b:Controls>
						</b:ControlGroup>
						<b:ControlGroup>
							<b:Controls>
								<b:ControlLabel for="tweetStatusListBox">Tweet
									status&nbsp;
								</b:ControlLabel>
								<b:ListBox ui:field="tweetStatusListBox">
								</b:ListBox>
							</b:Controls>
						</b:ControlGroup>
						<b:FormActions>
							<b:Button type="PRIMARY" ui:field="tweetSearchBtn">Search</b:Button>
							<b:Button ui:field="cancelBtn">Cancel</b:Button>
						</b:FormActions>
					</b:Column>
				</b:FluidRow>
				<b:FluidRow>
					<b:Column size="8">
						<g:HTMLPanel ui:field="tweetCellTablePanel">
						</g:HTMLPanel>
					</b:Column>
				</b:FluidRow>
			</b:Tab>
			<b:Tab heading="Neighborhoods">
				<b:FluidRow>
					<b:Column size="5">
						<b:WellForm>
							<b:ControlGroup>
								<b:Controls>
									<b:Label>Zip</b:Label>
									<b:TextBox ui:field="neighborhoodZip" placeholder="Zip..."></b:TextBox>
								</b:Controls>
							</b:ControlGroup>
							<b:ControlGroup>
								<b:Controls>
									<b:Label>Neighborhood Name</b:Label>
									<b:TextBox ui:field="neighborhoodName" placeholder="Neighborhood..."></b:TextBox>
								</b:Controls>
							</b:ControlGroup>
							<b:ControlGroup>
								<b:Controls>
									<b:Label>City</b:Label>
									<b:TextBox ui:field="neighborhoodCity" placeholder="City..."></b:TextBox>
								</b:Controls>
							</b:ControlGroup>
							<b:ControlGroup>
								<b:Controls>
									<b:Label>State</b:Label>
									<b:TextBox ui:field="neighborhoodState" placeholder="State..."></b:TextBox>
								</b:Controls>
							</b:ControlGroup>
							<b:ControlGroup>
								<b:Controls>
									<b:Label>Parent neighborhood id</b:Label>
									<b:TextBox ui:field="parentNeighborhoodId"
										placeholder="Parent ID..."></b:TextBox>
								</b:Controls>
							</b:ControlGroup>
							<b:SubmitButton addStyleNames="btn"
								ui:field="searchNeighborhoodBtn">Search</b:SubmitButton>
							<b:SubmitButton addStyleNames="btn"
								ui:field="createNeighborhoodBtn">Create</b:SubmitButton>
						</b:WellForm>
					</b:Column>
					<b:Column size="4">

					</b:Column>
				</b:FluidRow>
				<b:FluidRow addStyleNames="{style.row}">
					<b:Column size="8">
						<g:HTMLPanel ui:field="neighborhoodListPanel">
						</g:HTMLPanel>
					</b:Column>
				</b:FluidRow>
				<b:FluidRow addStyleNames="{style.row}">
					<b:Column size="6">
						<g:HTMLPanel ui:field="neighborhoodDetailsPanel" addStyleNames="{style.panel}">
						    <b:Label>
								Neighborhood ID
							</b:Label>
							<b:TextBox ui:field="neighborhoodIdTextBox"
								placeholder=""></b:TextBox>
							<br />
							<b:Label>
								Name
							</b:Label>
							<b:TextBox ui:field="neighborhoodNameTextBox"
								placeholder="Name..."></b:TextBox>
							<br />
							<b:Label>
								City
							</b:Label>
							<b:TextBox ui:field="neighborhoodCityTextBox"
								placeholder="City..."></b:TextBox>
							<br />
							<b:Label>
								Zip
							</b:Label>
							<b:TextBox ui:field="neighborhoodZipCodeTextBox"
								placeholder="Zip..."></b:TextBox>
							<br />
							<b:Label>
								Parent Neighborhood
							</b:Label>
							<b:TextBox ui:field="neighborhoodParentIdTextBox"
								placeholder="parent..."></b:TextBox>
							<br />
							<g:HTMLPanel addStyleNames="{style.panel}">
								<g:HTMLPanel>
									<b:Image ui:field="neighborhoodImagePreview" />
									<b:Label>Image Link</b:Label>
									<b:TextBox ui:field="imageUrlTextField"
										addStyleNames="{style.longTextBox}" />
									<br/>
									<b:Label>Image ID</b:Label>
									<b:TextBox ui:field="imageIdTextField"
										addStyleNames="{style.longTextBox}" />
								</g:HTMLPanel>
								<g:FormPanel ui:field="uploadForm">
									<g:HTMLPanel>
										<b:Label>Upload image</b:Label>
										<b:FileUpload ui:field="uploadField" name="image" />
									</g:HTMLPanel>
								</g:FormPanel>
								<g:HTMLPanel ui:field="neighborhoodButtonPanel">
								    <b:Button ui:field="imageAddBtn">Add Image</b:Button>
								    <b:Button ui:field="saveNeighborhoodBtn">Save</b:Button>
								</g:HTMLPanel>
							</g:HTMLPanel>
						</g:HTMLPanel>
					</b:Column>
					<b:Column size="6">
					    <g:FlowPanel ui:field="neighborhoodImagePanel">
						</g:FlowPanel>
					</b:Column>
				</b:FluidRow>
			</b:Tab>
		</b:TabPanel>
	</g:HTMLPanel>
</ui:UiBinder> 