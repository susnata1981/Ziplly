<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:dt="urn:import:com.ziplly.app.client.widget" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		#cwallId {
		float: left;
		width: 1000px;
		margin-left: 30px;
		border: 1px solid #ddd;
		}

		.center {
		position: absolute;
		top: 300px;
		left: 500px;
		}
		.profile_info_section {
		float: left;
		width: 700px;
		margin: 12px;
		}
		.shareTextBox {
		width: 740px;
		height: 40px;
		}
		.filterheader {
		width: 140px;
		height: 30px;
		background: #ddd;
		}
		.alertMessage {
		margin-left: 200px;
		width: 400px;
		}
	</ui:style>
	<g:HTMLPanel>
		<aside>
			<g:HTMLPanel ui:field="filterHeader"></g:HTMLPanel>
			<g:HTMLPanel ui:field="filterTweetsPanel"></g:HTMLPanel>
		</aside>
		<b:PageHeader subtext="Ziplly connecting the community">Community Wall</b:PageHeader>
		<b:Alert addStyleNames="{style.alertMessage}" ui:field="message" />
		<div id="cwallId">
			<!-- <dt:CommunityWallWidget ui:field="cww"/> -->
			<div class="{style.profile_info_section}">
				<b:Form ui:field="tweetForm">
					<b:ControlGroup ui:field="tweetCategoryCg">
						<b:Controls>
							<b:TextArea placeholder="Share what's on your mindâ€¦"
								addStyleNames="{style.shareTextBox}" ui:field="tweetTextBox" />
							<b:HelpInline ui:field="tweetHelpInline" />
						</b:Controls>
					</b:ControlGroup>
					<g:HTMLPanel ui:field="tweetCategoryPanel">
						<b:ControlLabel>Select Category</b:ControlLabel>
						<b:Controls>
							<b:ListBox ui:field="tweetCategoryList">
							</b:ListBox>
						</b:Controls>
						<b:Button type="PRIMARY" size="SMALL" addStyleNames="btn"
							ui:field="tweetBtn">Share</b:Button>
						<b:Button type="PRIMARY" size="SMALL" addStyleNames="btn"
							ui:field="cancelBtn">Cancel</b:Button>
					</g:HTMLPanel>
				</b:Form>
			</div>
			<g:ScrollPanel ui:field="scrollPanel">
				<g:HTMLPanel ui:field="communityWallPanel">
				</g:HTMLPanel>
			</g:ScrollPanel>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 