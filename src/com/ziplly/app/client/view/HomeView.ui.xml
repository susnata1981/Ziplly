<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:dt="urn:import:com.ziplly.app.client.widget" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="com.ziplly.app.client.view.HomeView.Style">
		.marginTop {
		margin-top: 15px;
		}
		.leftnavHeaderContainer {
		overflow: hidden;
		}
		.leftnavHeaderSpan {
		display: inline-block;
		width: 100%;
		margin: 0;
		padding: 4px;
		font-size:
		1em;
		color: #555444;
		background: #ddd;
		border-bottom: 2px solid #555;
		}
		.fontBold {
			font-weight: 600;
		}
		.tweetFilterLink {
		clear: both;
		float: left;
		display: block;
		font-size: .85em;
		width: 100%;
		margin: 3px 2px;
		padding: 5px 2px;
		font-weight: 600;
		}
		.tweetFilterLink:hover {
		background: #ccc;
		}
		.selectedTweetType
		{
		background: #c2c2c2;
		}
		.communityWallColumn {
		position: relative;
		height: auto;
		border-radius: 5px;
		}
		.communityWallPanel {
		position: absolute;
		left: 0;
		right:0;
		margin-left: 20px;
		background-color: #ddd;
		padding-top: 10px;
		min-height: 700px;
		opacity: .9;
		}
		.communityInfoPanel {
		height:
		320px;
		background: #fff;
		border:
		1px solid
		#555;
		}
		.tweetBox {
		margin-left: 14px;
		width: 100%;
		}
		.message {
		clear: both;
		left: 10px;
		}
		.communitySummaryDiv {
		border: 1px solid #ddd;
		padding: 4px;
		width: 220px;
		height: 340px;
		background: #f1f1f1;
		opacity: .9;
		overflow: hidden;
		}
		.feedbackPanel {
			margin-top: 20px;
		}
		.link {
		list-style: none;
		}
		.popoverLink {
			display: inline;
			font-size: 8px;
		}
		.filterPanel {
			background: #f1f1f1;
			opacity: .8;
		}
		.gwt-Anchor {
			font-weight: 600;
		}
	</ui:style>
	<b:FluidContainer>
		<b:FluidRow>
			<b:Column size="8">
				<b:Alert ui:field="message" addStyleNames="{style.message}" close="false" />
			</b:Column>
		</b:FluidRow>
		<b:FluidRow>
			<b:Column size="2">
				<g:HTMLPanel addStyleNames="{style.filterPanel}">
					<div class="{style.leftnavHeaderContainer}">
						<g:HTMLPanel>
						    <span class="{style.leftnavHeaderSpan}">
							<i class="fa fa-tags">&nbsp;
							    <span class="{style.fontBold}">Neighborhoods</span>
							</i>
							<b:Popover text="You can broadcast to your neighborhood or to the greater community for more visibility"
								heading="Learn more">
								<g:Anchor addStyleNames="{style.popoverLink}">learn more</g:Anchor>
							</b:Popover>
						</span>
							<g:HTMLPanel ui:field="neighborhoodsPanel"></g:HTMLPanel>
						</g:HTMLPanel>
					</div>
					<div class="{style.leftnavHeaderContainer}">
						<span class="{style.leftnavHeaderSpan}">
							<i class="fa fa-list">&nbsp;
							     <span class="{style.fontBold}">Category</span>
							</i>
						</span>
						<g:HTMLPanel ui:field="filterTweetsPanel"></g:HTMLPanel>
					</div>
					<div class="{style.leftnavHeaderContainer} {style.marginTop}">
						<span class="{style.leftnavHeaderSpan}">
							<i class="fa fa-tags">&nbsp;
							     <span class="{style.fontBold}">Hashtags</span>
							</i>
						</span>
						<g:HTMLPanel ui:field="hashtagPanel"></g:HTMLPanel>
					</div>
					<div class="{style.leftnavHeaderContainer} {style.marginTop}">
						<span class="{style.leftnavHeaderSpan}">
							<i class='fa fa-inbox'>&nbsp;
							     <span class="{style.fontBold}">Personal Messages</span>
							</i>
						</span>
						<g:HTMLPanel>
							<g:Anchor ui:field="messagesLink" addStyleNames="{style.tweetFilterLink}">
								Inbox
								<span ui:field="unreadMessageCountField" />
								<span ui:field="unreadMessageCountSpan" />
							</g:Anchor>
						</g:HTMLPanel>
					</div>
				</g:HTMLPanel>
			</b:Column>
			<b:Column size="6" addStyleNames="{style.communityWallColumn}">
				<g:HTMLPanel ui:field="communityWallPanel"
					addStyleNames="{style.communityWallPanel}">
					<dt:TweetBox ui:field="tweetBox" addStyleNames="{style.tweetBox}" />
				</g:HTMLPanel>
			</b:Column>
			<b:Column size="3">
				<b:Container ui:field="communitySummaryContainer"
					addStyleNames="{style.communitySummaryDiv}">
					<g:HTMLPanel addStyleNames="{style.feedbackPanel}">
						<b:NavLink ui:field="feedbackLink" icon="COMMENT"
							addStyleNames="{style.link}">Provide feedback</b:NavLink>
					</g:HTMLPanel>
					<dt:CommunitySummaryWidget ui:field="communitySummaryWidget" />
				</b:Container>
			</b:Column>
		</b:FluidRow>
	</b:FluidContainer>
</ui:UiBinder> 