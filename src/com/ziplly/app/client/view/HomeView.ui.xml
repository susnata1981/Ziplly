<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:dt="urn:import:com.ziplly.app.client.widget" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="com.ziplly.app.client.view.HomeView.Style">
		.marginTop {
		margin-top: 15px;
		}
		.leftnavHeaderContainer {
		overflow: hidden;
		}
		.leftnavHeaderSpan {
		display: inline-block;
		width: 100%;
		margin: 0;
		padding: 4px;
		font-size:
		1em;
		color: #555444;
		background: #ddd;
		border-bottom: 2px solid #555;
		}
		.tweetFilterLink {
		clear: both;
		float: left;
		display: block;
		font-size:
		.85em;
		width: 100%;
		margin: 3px 2px;
		padding: 5px 2px;
		background:
		#f9f9f9;
		}
		.tweetFilterLink:hover {
		background: #ccc;
		}
		.selectedTweetType
		{
		background: #c2c2c2;
		}
		.communityWallPanel {
		background-color: #ddd;
		padding-top: 10px;
		min-height: 100%;
		}
		.communityInfoPanel {
		height:
		320px;
		background: #fff;
		border:
		1px solid
		#555;
		}
		.tweetBox {
		margin: 1.3%;
		width: 100%;
		}
		.message {
		clear: both;
		left: 10px;
		}
		.communitySummaryDiv {
		border: 1px solid #ddd;
		padding: 4px;
		height: 280px;
		overflow: hidden;
		}
	</ui:style>
	<b:FluidContainer>
		<b:FluidRow>
			<b:Column size="10">
				<b:Alert ui:field="message" addStyleNames="{style.message}"
					close="false" />
			</b:Column>
		</b:FluidRow>
		<b:FluidRow>
			<b:Column size="2">
				<g:HTMLPanel>
					<div class="{style.leftnavHeaderContainer}">
						<span class="{style.leftnavHeaderSpan}">
							<i class="fa fa-list">&nbsp;Category
							</i>
						</span>
						<g:HTMLPanel ui:field="filterTweetsPanel"></g:HTMLPanel>
					</div>
					<div class="{style.leftnavHeaderContainer} {style.marginTop}">
						<span class="{style.leftnavHeaderSpan}">
							<i class="fa fa-tags">&nbsp;Hashtags
							</i>
						</span>
						<g:HTMLPanel ui:field="hashtagPanel"></g:HTMLPanel>
					</div>
					<div class="{style.leftnavHeaderContainer} {style.marginTop}">
						<span class="{style.leftnavHeaderSpan}">
							<i class='fa fa-inbox'>&nbsp;Personal
								Messages
							</i>
						</span>
						<g:HTMLPanel>
							<g:Anchor ui:field="messagesLink" addStyleNames="{style.tweetFilterLink}">
								Inbox <span ui:field="unreadMessageCountField" />
								<span ui:field="unreadMessageCountSpan" />
							</g:Anchor>
						</g:HTMLPanel>
					</div>
				</g:HTMLPanel>
			</b:Column>
			<b:Column size="7">
				<g:HTMLPanel ui:field="communityWallPanel"
					addStyleNames="{style.communityWallPanel}">
					<dt:TweetBox ui:field="tweetBox" addStyleNames="{style.tweetBox}"
						width="100%" />
				</g:HTMLPanel>
			</b:Column>
			<b:Column size="3">
				<g:HTMLPanel addStyleNames="{style.communitySummaryDiv}">
					<dt:CommunitySummaryWidget ui:field="communitySummaryWidget" />
				</g:HTMLPanel>
			</b:Column>
		</b:FluidRow>
	</b:FluidContainer>
</ui:UiBinder> 