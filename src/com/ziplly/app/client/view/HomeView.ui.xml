<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:dt="urn:import:com.ziplly.app.client.widget" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
	 xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.rootPanel {
		position: relative;
		}
		.tweetDiv {
			clear: both;
			margin-top: 20px;	
		}
		.communityWall {
		float: left;
		width: 80%;
		margin: 1%;
		}
		.tweetCategoryBox {
		float: left;
		width: 14%;
		margin: 1%;
		border: 1px
		solid
		#ddd;
		}
		.leftnav_header {
		display: inline-block;
		width: 100%;
		font-size:
		16px;
		margin: 0;
		padding: 2px;
		font-size: 16px;
		color: #555;
		text-align:
		left;
		background: #b2b2b2;
		border-bottom: 2px solid #555;
		}
		.tweetFilterLink {
		display:block;
		height: 30px;
		width: 100%;
		margin: 0
		!important;
		padding: 6px;
		}
		.tweetFilterLink a:hover {
		background: #555;
		}
		.communityWallPanel {
		clear: both;
		padding: 1%;
		height: 1000px;
		overflow:
		auto;
		position: absolute;
		width: 80%;
		background: #B2B2B2;
		border: 1px
		solid #000;
		}
		.communityInfoPanel {
		position: absolute;
		left: 68%;
		top:
		10px;
		width: 24%;
		height: 30%;
		background: #fff;
		border: 1px solid #555;
		}
		.tweetBox {
		margin: 1.3%;
		width: 100%;
		}
		.message {
			clear: both;
			left: 10px;
		}
		footer {
		display:hidden;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.rootPanel}">
		<b:Alert ui:field="message" addStyleNames="{style.message}"
			close="false" />
		<div class="{style.tweetDiv}">
			<div class="{style.tweetCategoryBox}">
				<span class="{style.leftnav_header}">Category</span>
				<g:HTMLPanel ui:field="filterTweetsPanel"></g:HTMLPanel>

				<span class="{style.leftnav_header}">Hashtags</span>
				<g:HTMLPanel ui:field="hashtagPanel"></g:HTMLPanel>
			</div>
			<div class="{style.communityWall}">
				<g:HTMLPanel ui:field="communityWallPanel"
					addStyleNames="{style.communityWallPanel}">
					<dt:TweetBox ui:field="tweetBox" addStyleNames="{style.tweetBox}"
						width="100%" />

					<div class="{style.communityInfoPanel}">
						<dt:CommunitySummaryWidget ui:field="communitySummaryWidget" />
					</div>
				</g:HTMLPanel>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 