	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		input[type="text"],input[type="password"] {
		height: 30px;
		}
		.loginForm {
		position: absolute;
		top: 40%;
		right: 10%;
		width: 370px;
		}
		.uploadImageForm {
		clear: both;
		display: block;
		height: auto;
		}
		.chooseFileUploadButton {
		float: left;
		width: 20%;
		}
		.uploadImageButton {
		clear: left;
		display: block;
		width: 14%;
		}
		.profileImagePreviewDiv {
		float: left;
		width: 120px;
		height: 120px;
		}
		.profileImagePreview {
		width:
		94% !important;
		height: 94% !important;
		border: 1px solid #ddd;
		}
		.signupPanel {
			border: 1px solid #ddd;
			background: #f1f1f1;
			padding: 6px;
			min-width: 300px;
			max-width: 320px;
		}
		.row {
		clear: left;
		display: block;
		margin-top: 8px;
		}
	</ui:style>
	<ui:with type="com.ziplly.app.client.resource.ZResources"
		field="resources" />
