<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" xmlns:dt="urn:import:com.ziplly.app.client.widget"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res' type='com.ziplly.app.client.resource.ZResources' />
	<ui:style>
		.rootPanel ol li {
		font-family: "Calisto MT", "Bookman Old Style", Bookman, "Goudy Old Style",
		Garamond, "Hoefler Text", "Bitstream Charter", Georgia, serif;
		font-size: 15px;

		}
		input[type="text"],input[type="password"] {
		height: 36px
		!important;
		font-size: 15px;
		}
		.loginForm {
		position: absolute;
		top: 40%;
		right: 10%;
		width: 300px;
		}
		.promotionCycle {
		position: relative;
		margin-top: 200px;
		}
		.uploadImageForm {
		clear: both;
		display: block;
		height: auto;
		}
		.chooseFileUploadButton {
		float: left;
		width: 20%;
		}
		.uploadImageButton {
		clear: left;
		display: block;
		width: 14%;
		}
		.profileImagePreviewDiv {
		float: left;
		width: 120px;
		height: 120px;
		}
		.profileImagePreview {
		width:
		94% !important;
		height: 94% !important;
		border: 1px solid #ddd;
		}
		.signupPanel {
		border: 1px solid #ddd;
		background: #f1f1f1;
		padding:12px;
		width: 340px;
		border-radius: 4px;
		margin-top: 40px;
		}
		.signup-hero-unit:hover,
		.signup-hero-unit-small:hover,
		.promotionPanel:hover,
		.signupPanel:hover {
		-webkit-transform:
		scale(1.05) !important;
		background-color: #F0FFFF;
		}
		.listitem {
		list-style: none;
		}
		.button {
		height: 40px;
		line-height: 30px;
		font-size:
		16px;
		font-weight: bold;
		}
		.row {
		clear:
		left;
		display: block;
		margin-top:
		8px;
		margin-bottom: 20px;
		}
		.addressRow {
		width: 100% !important;
		}
		.addressField {
		width: 96%
		!important;
		}
		.fluid-row {
		diplay: block;
		margin-top: 40px;
		}
		.tinytext {
		font-size: 12px;
		font-weight: normal;
		}
		.promotionPanel {
		margin-top:
		100px;
		padding: 10px;
		background: #f1f1f1;
		border-radius: 5px;
		}
		.heading {
		font-family: Verdana, sans-serif;
		font-size: 22px;
		color: #555;
		padding:
		20px 4px;
		}
		.signup-hero-unit {
		position: relative;
		padding: 30px !important;
		padding-bottom: 60px !important;
		opacity: .9;
		}
		.signup-hero-unit h4 {
		border-bottom: 1px solid #bbb;
		padding-bottom: 4px;
		color: #555;
		height: 60px;
		}
		.hero-unit-btn {
		position: relative;
		float: right;
		}
		.signup-hero-unit-small {
		position:
		relative;
		opacity: .8;
		padding: 30px
		!important;
		}
		.popoverHover {
		display: inline;
		font-size:
		12px;
		}
		.popoverLink {
		font-size: 12px !important;
		}
		.lightgray {
		color:
		#666;
		}
		.popoverText {
		display: inline;
		font-size: 11px;
		}
		.signInAnchor {
		margin: 0 4px !important;
		}
		.colSpan {
		max-width: 90%;
		}
		.title {
		padding-bottom: 5px;
		border-bottom: 2px solid #ccc;
		}
		.pricingLearnMoreLink {
		clear: left;
		color: #f1f1f1;
		display: block;
		margin-top: 6px;
		font-size: 14px;
		}
		.planSectionTitle {
		margin: 15px 0;
		padding: 20px;
		border-top: 1px
		solid #ccc;
		text-align: center;
		background: #f5f5f5;
		border-radius: 5px;
		}
		.planSectionTitle h1 {
		color: #525252 !important;
		}
		.planSectionTitle p
		{
		color: #525252 !important;
		font-size: 16px;
		}
		.signup-hero-unit-description ol {
		height: 140px;
		}
		.faqPanel {
			margin: 20px 0;
			background: #f1f1f1;
			border-radius: 5px;
			padding: 10px;
		}
		.faqTextH2 {
			font-family: "Arial Rounded MT Bold", "Helvetica Rounded", Arial, sans-serif;
			font-size: 20px !important;
			padding: 10px;
			border-bottom: 2px solid #ccc;
			text-align: left;
		}
		.faqTextH4 {
			font-size: 18px;
			font-family: "Arial Narrow", Arial, sans-serif;
			text-align: left;
		}
		.faqTextH6 {
			font-size: 16px;
			font-family: Candara, Calibri, Segoe, "Segoe UI", Optima, Arial, sans-serif;
			text-align: left;
		}
	</ui:style>
	<ui:with type="com.ziplly.app.client.resource.ZResources"
		field="resources" />
	<b:FluidContainer addStyleNames="{style.rootPanel}">
		<b:FluidRow>
			<b:Column offset="1" size="9">
				<b:Alert ui:field="infoField" close="false" animation="true" />
			</b:Column>
		</b:FluidRow>
		<b:FluidRow>
			<b:Column size="5" addStyleNames="{style.colSpan}">
				<g:HTMLPanel>
					<dt:VirtuousCycleWidget />
					<div>
						<g:Anchor ui:field="pricingAnchor" addStyleNames="{style.pricingLearnMoreLink}">See
							pricing</g:Anchor>
					</div>
				</g:HTMLPanel>
			</b:Column>
			<b:Column offset="1" size="5" addStyleNames="{style.colSpan}">
				<g:HTMLPanel addStyleNames="{style.signupPanel}">
					<div class="heading">
						Business Sign up
						<g:Anchor ui:field="learnMoreAnchor" addStyleNames="{style.tinytext}">learn
							more</g:Anchor>
					</div>
					<hr />
					<a id="signupFormLink" />
					<b:Form>
						<b:ControlGroup ui:field="businessNameCg"
							addStyleNames="{style.row}">
							<b:Controls>
								<b:Label>Business name</b:Label>
								<br />
								<b:TextBox ui:field="businessName" placeholder="BusinessName..." />
								<b:HelpInline ui:field="businessNameError"></b:HelpInline>
							</b:Controls>
						</b:ControlGroup>
						<b:Controls>
							<b:Label>Business type</b:Label>
							<br />
							<b:ListBox ui:field="businessCategory">
							</b:ListBox>
						</b:Controls>
						<b:ControlGroup ui:field="street1Cg"
							addStyleNames="{style.row} {style.addressRow}">
							<b:Controls>
								<b:Label>Address</b:Label>
								<br />
								<b:TextBox ui:field="street1" placeholder="street1..."
									addStyleNames="{style.addressField}" />
								<b:HelpInline ui:field="street1Error"></b:HelpInline>
								<b:Image ui:field="neighborhoodLoadingImage" />
								<g:Anchor ui:field="clearAddressAnchor"
									addStyleNames="{style.popoverText} {style.signInAnchor}">No that's not right, enter a different address</g:Anchor>
							</b:Controls>
						</b:ControlGroup>
						<b:ControlGroup ui:field="phoneCg" addStyleNames="{style.row}">
							<b:Controls>
								<b:Label>Phone</b:Label>
								<br />
								<b:TextBox ui:field="phone" placeholder="xxx-xxx-xxxx" />
								<b:HelpInline ui:field="phoneError"></b:HelpInline>
							</b:Controls>
						</b:ControlGroup>
						<b:ControlGroup ui:field="neighborhoodCg"
							addStyleNames="{style.row}">
							<b:Controls ui:field="neighborhoodControl">
								<b:ControlLabel for="neighborhood">Select Neighborhood</b:ControlLabel>
								<g:HTMLPanel ui:field="neighborhoodListPanel">
								</g:HTMLPanel>
								<b:HelpInline ui:field="neighborhoodError"></b:HelpInline>
								<b:HelpBlock>Pick your neighborhood to learn about whats
									going on
									in there</b:HelpBlock>
							</b:Controls>
						</b:ControlGroup>
						<b:ControlGroup ui:field="emailCg" addStyleNames="{style.row}">
							<b:Controls>
								<b:Label>Email</b:Label>
								<br />
								<b:TextBox ui:field="email" placeholder="email..." />
								<b:HelpInline ui:field="emailError"></b:HelpInline>
							</b:Controls>
						</b:ControlGroup>
						<b:ControlGroup ui:field="passwordCg"
							addStyleNames="{style.row}">
							<b:Controls>
								<b:Label>Password</b:Label>
								<br />
								<b:PasswordTextBox ui:field="password"
									placeholder="password..." />
								<b:HelpInline ui:field="passwordError"></b:HelpInline>
							</b:Controls>
						</b:ControlGroup>
						<b:Button block="true" type="SUCCESS" ui:field="signupBtn"
							addStyleNames="{style.button}">Sign up Now</b:Button>
						<g:HTMLPanel addStyleNames="{style.row}">
							<span class="tiny_text">
								By joining, you agree to our
								<g:Anchor ui:field="termsOfUseAnchor">Terms of Use</g:Anchor>
								and
								<g:Anchor ui:field="privacyPolicyAnchor">Privacy Policy</g:Anchor>
							</span>
						</g:HTMLPanel>
						<g:HTMLPanel addStyleNames="{style.row}">
							<span class="tiny_text">
								Already a member
								<g:Anchor ui:field="signInAnchor">Sign in</g:Anchor>
								here
							</span>
						</g:HTMLPanel>
					</b:Form>
				</g:HTMLPanel>
			</b:Column>
		</b:FluidRow>
		<b:FluidRow addStyleNames="{style.fluid-row}">
			<b:Column size="4" addStyleNames="{style.colSpan}">
				<g:HTMLPanel>
					<b:Hero addStyleNames="{style.signup-hero-unit}">
						<b:Heading size="4" ui:field="heading">Connect with local
							customers</b:Heading>
						<!-- <b:Paragraph addStyleNames="{style.lightgray}"> Complete your 
							profile and upload a photo. </b:Paragraph> <b:Paragraph addStyleNames="{style.lightgray}"> 
							Say a bit about your business. </b:Paragraph> <b:Button type="INFO" ui:field="createProfileBtn" 
							addStyleNames="{style.hero-unit-btn}">Signup</b:Button> -->
						<g:HTMLPanel addStyleNames="{style.signup-hero-unit-description}">
							<ol>
								<li>Complete your profile.</li>
								<li>Broadcast your business updates within the community.</li>
							</ol>
							<div>
								<b:Button type="INFO" ui:field="createProfileBtn"
									addStyleNames="{style.hero-unit-btn}">Explore</b:Button>
							</div>
						</g:HTMLPanel>
					</b:Hero>
				</g:HTMLPanel>
			</b:Column>
			<b:Column size="4" addStyleNames="{style.colSpan}">
				<g:HTMLPanel>
					<b:Hero addStyleNames="{style.signup-hero-unit}">
						<b:Heading size="4">Instantly publish coupons</b:Heading>
						<!-- <b:Paragraph addStyleNames="{style.lightgray}"> Basic, Pro and 
							Premium plans, pricing based on usage. </b:Paragraph> <b:Paragraph addStyleNames="{style.lightgray}"> 
							Publish 4 coupons/month with Pro plan. </b:Paragraph> <b:Button type="INFO" 
							ui:field="exploreBtn" addStyleNames="{style.hero-unit-btn}">Explore</b:Button> -->
						<g:HTMLPanel addStyleNames="{style.signup-hero-unit-description}">
							<ol>
								<li>Boost sales by creating your own coupon</li>
								<li>Set the terms of your coupon</li>
								<li>Instantly publish coupons</li>
							</ol>
							<div>
								<b:Button type="INFO" ui:field="exploreBtn"
									addStyleNames="{style.hero-unit-btn}">Publish coupon</b:Button>
							</div>
						</g:HTMLPanel>
					</b:Hero>
				</g:HTMLPanel>
			</b:Column>
			<b:Column size="4" addStyleNames="{style.colSpan}">
				<g:HTMLPanel>
					<b:Hero addStyleNames="{style.signup-hero-unit}">
						<b:Heading size="4">Build relationship with local customers</b:Heading>
						<!-- <b:Paragraph addStyleNames="{style.lightgray}"> Post messages 
							to inform local customers about specials. </b:Paragraph> <b:Paragraph addStyleNames="{style.lightgray}"> 
							Get instant results. </b:Paragraph> <b:Button type="INFO" ui:field="postMessageBtn" 
							addStyleNames="{style.hero-unit-btn}">Post message</b:Button> -->
						<g:HTMLPanel addStyleNames="{style.signup-hero-unit-description}">
							<ol>
								<li>Receive customer feedback on your posts</li>
								<li>Regularly post messages to keep customers informed</li>
							</ol>
							<div>
								<b:Button type="INFO" ui:field="postMessageBtn"
									addStyleNames="{style.hero-unit-btn}">Post coupon</b:Button>
							</div>
						</g:HTMLPanel>
					</b:Hero>
					<a id="howItWorksLink" />
				</g:HTMLPanel>
			</b:Column>
		</b:FluidRow>
		<b:FluidRow>
			<b:Column size="12">
				<g:HTMLPanel addStyleNames="{style.planSectionTitle}">
					<h2>
						60 Day Free Trial
						<sub>
							<p class="tinyfont">Currently only in Seattle. Coming soon in other
								regions.</p>
						</sub>
					</h2>
					<br />
					<p>We don't require you to pick a plan to start off. Just sign up,
						see the benefit first.</p>
				</g:HTMLPanel>
			</b:Column>
		</b:FluidRow>
		<b:FluidRow>
			<b:Column size="4">
				<dt:PricingPlanWidget price="FREE" tweetCount="3"
					couponCount="0" title="BASIC" showChoosePlanButton="false" />
			</b:Column>
			<b:Column size="4">
				<dt:PricingPlanWidget price="$25" tweetCount="6"
					couponCount="6" title="PREMIUM" titleHue="GREEN"
					showChoosePlanButton="false" />
			</b:Column>
			<b:Column size="4">
				<g:HTMLPanel>
					<dt:PricingPlanWidget price="$50" tweetCount="unlimited"
						couponCount="unlimited" title="PRO" showChoosePlanButton="false" />
					<a id="pricingPlans" />
				</g:HTMLPanel>
			</b:Column>
		</b:FluidRow>
		<b:FluidRow>
			<b:Column size="12">
				<g:HTMLPanel addStyleNames="{style.faqPanel}">
					<p class="{style.faqTextH2}">Frequently asked question</p>
						<ol>
							<li>
								<p class="{style.faqTextH4}">Do I need to choose a plan during signup</p>
								<p class="{style.faqTextH6}">
								    We don't require you to choose a plan during sign up. 
								    When you try to publish your first coupon is when we require you subscribe. 
								    We don't bill you for the duration of the promotional period.
								</p>
							</li>
						</ol>
				</g:HTMLPanel>
			</b:Column>
		</b:FluidRow>
	</b:FluidContainer>
</ui:UiBinder> 