<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
		.navPillList {
			float: right;
			margin: 15px 100px 5px 0px;
		}
	</ui:style>
	<g:HTMLPanel>
		<b:NavPills addStyleNames="{style.navPillList}">
		    <b:NavLink ui:field="homeLink" icon="HOME">Home</b:NavLink>
			<b:Dropdown text="Account" icon="USER">
				<b:NavLink ui:field="accountLink">Profile</b:NavLink>
				<b:NavLink ui:field="messageLink">Messages</b:NavLink>
				<b:NavLink ui:field="settingsLink">Settings</b:NavLink>
				<b:NavLink ui:field="logoutLink">Logout</b:NavLink>
			</b:Dropdown>
			<b:Dropdown text="Community">
			    <b:NavLink ui:field="residentsLink">Residents</b:NavLink>
			    <b:NavLink ui:field="businessLink">Businesses</b:NavLink>
			</b:Dropdown>
			<b:NavLink ui:field="aboutLink">About</b:NavLink>
		</b:NavPills>
	</g:HTMLPanel>
</ui:UiBinder> 