<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
	.loginBtn {
		margin: 2px 10px 20px 2px;
	}
	</ui:style>
	<g:HTMLPanel>
		<b:Alert ui:field="message"/>
		<div class="loginSection">
			<b:Form>
				<b:ControlGroup ui:field="emailCg">
					<b:Controls>
						<b:TextBox ui:field="email" placeholder="email..." />
						<b:HelpInline ui:field="emailError"></b:HelpInline>
					</b:Controls>
				</b:ControlGroup>
				<b:ControlGroup ui:field="passwordCg">
					<b:Controls>
						<b:PasswordTextBox ui:field="password"
							placeholder="password..." />
						<b:HelpInline ui:field="passwordError"></b:HelpInline>
					</b:Controls>
				</b:ControlGroup>
				<b:Button type="SUCCESS" addStyleNames="{style.loginBtn}" ui:field="loginBtn">SignIn</b:Button>
				<b:Button type="INFO" addStyleNames="{style.loginBtn}" ui:field="fbLoginBtn">Facebook Login</b:Button>
			</b:Form>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 