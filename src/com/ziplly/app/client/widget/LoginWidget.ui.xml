<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:with type="com.ziplly.app.client.resource.ZResources"
		field="zresources" />
	<ui:style>
		.loginSection {
		width: 340px;
		margin: auto;
		padding: 5px;
		}
		.inputTextBox {
			width: 96%;
			height: 40px !important;
			font-size: 18px !important;
		}
		.button
		{
		display: block;
		height: 30px;
		line-height: 30px;
		font-size: 1.12em;
		}
		.residentSignupDiv {
		margin-top:8px;
		height: 55px;
		padding: 2px;
		font-size: 12px;
		font-style: helvetica;
		}
		.residentSignupLink {
		font-size: 12px;
		font-style:
		helvetica;
		height: 20px
		!important;
		background: none !important;
		}
		.passwordRecoveryLink {
		margin-top: 10px;
		font-size: 12px;
		font-style:
		helvetica;
		height: 20px
		!important;
		background: none !important;
		}
		.hr {
			margin: 10px 0;
		}
	</ui:style>

	<g:HTMLPanel ui:field="loginWidgetPanel" addStyleNames="{style.loginSection}">
		<b:Alert ui:field="message"  close="false"/>
		<b:WellForm>
			<b:ControlGroup ui:field="emailCg">
				<b:Controls>
					<b:TextBox ui:field="email" placeholder="email..." addStyleNames="{style.inputTextBox}"/>
					<b:HelpInline ui:field="emailError"></b:HelpInline>
				</b:Controls>
			</b:ControlGroup>
			<b:ControlGroup ui:field="passwordCg">
				<b:Controls>
					<b:PasswordTextBox ui:field="password" placeholder="password..." addStyleNames="{style.inputTextBox}"/>
					<b:HelpInline ui:field="passwordError"></b:HelpInline>
				</b:Controls>
			</b:ControlGroup>
			<b:Button type="SUCCESS" ui:field="loginBtn" addStyleNames="{style.button}">Signin</b:Button>
			<g:HTMLPanel>
			    <hr class="{style.hr}"/>
				<g:Button addStyleNames="{style.button} {zresources.style.fbBtnImage}"
					ui:field="fbLoginBtn" />
			</g:HTMLPanel>
			<g:HTMLPanel addStyleNames="{style.residentSignupDiv}">
				<g:HTMLPanel ui:field="residentSignupPanel">
					<span>Not
						already a member, &nbsp;
						<g:Anchor ui:field="residentSignupLink" styleName="{style.residentSignupLink}">Resident
							Signup</g:Anchor>
						here
					</span>
				</g:HTMLPanel>
				<g:HTMLPanel ui:field="businessSignupPanel">
					<span>Not
						already a member, &nbsp;
						<g:Anchor ui:field="businessSignupLink" styleName="{style.residentSignupLink}">Business
							Signup</g:Anchor>
						here
					</span>
				</g:HTMLPanel>
				<g:HTMLPanel>
					<span>
						Forgot your password
						<g:Anchor ui:field="passwordRecoveryLink" styleName="{style.passwordRecoveryLink}">click
							here</g:Anchor>
					</span>
				</g:HTMLPanel>
			</g:HTMLPanel>
		</b:WellForm>
	</g:HTMLPanel>

</ui:UiBinder> 