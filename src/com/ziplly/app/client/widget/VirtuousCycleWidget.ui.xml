<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res' type='com.ziplly.app.client.resource.ZResources' />
	<ui:style>
		.promotionCyclePanel {
			height: 280px;
			min-width: 200px;
			position: relative;
			margin-top: 200px;
		}
		.smallPromoBox {
		position: absolute;
		width: 180px;
		height: 60px;
		border: 1px solid #555;
		background-color: #F0FFFF;
		font-family: Comic Sans MS, sans;
		text-align: center;
		font-size: 16px;
		font-weight: 500;
		margin-bottom: 20px;
		padding: 20px 5px;
		border-radius: 5px;
		}
		.smallPromoBox:hover {
			background: orange;
		}
		ul {
		margin: 0;
		padding: 0;
		position: relative;
		}
		.smallPromoBox ul li {
		list-style: none;
		line-height: 60px;
		}
		.smallPromoBox div {
		display: none;
		}
		.smallPromoBox:hover ul > div
		{
		-webkit-transform: scale(1.1);
		display:
		block;
		z-index: 10;
		}
		.help {
		position: absolute;
		width: 360px;
		top: 40px;
		left: 80px;
		width: 300px;
		color: #555;
		padding: 4px;
		background: #E0F0FF;
		}
		.help ol li {
		line-height: 30px;
		text-align: left;
		display: block;
		margin: 4px 0;
		font-family: Cambria, Georgia, serif;
		}
		.middle {
		left: 30%;
		top: 0;
		margin-bottom: 20px;
		}
		.left {
		left: 0;
		bottom: 0;
		}
		.right {
		right: -10px;
		bottom: 0;
		}
		.relative {
		position:
		relative;
		}
		.northeast {
		-webkit-transform: rotate(-45deg);
		position:
		absolute;
		left: 65px;
		bottom: 134px;
		}
		.southeast {
		-webkit-transform:
		rotate(45deg);
		position:
		absolute;
		right: 60px;
		bottom: 132px;
		}
		.westeast {
		-webkit-transform:
		rotate(180deg);
		position: absolute;
		left: 215px;
		bottom: 45px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.promotionCyclePanel}">
		<div class="{style.smallPromoBox} {style.middle}">
			<ul>
				<li>2. Publish Your Coupon</li>
				<div class="{style.help}">
					<ol>
						<li>
							Instantly publish your coupon
						</li>
						<li>
							No approval required
						</li>
						<li>
							No dealing with middle man
						</li>
						<li>
							Get paid right away
						</li>
					</ol>
				</div>
			</ul>
		</div>
		<g:Image resource="{res.rightArrow}" addStyleNames="{style.northeast}" />
		<g:Image resource="{res.rightArrow}" addStyleNames="{style.southeast}" />
		<g:Image resource="{res.rightArrow}" addStyleNames="{style.westeast}" />
		<div class="{style.smallPromoBox} {style.left}"
			ui:field="createHelpPanel">
			<ul>
				<li>1. Create your Coupon</li>
				<div class="{style.help}">
					<ol ui:field="createDetailsUl">
						<li>
							Tell us about the original price
						</li>
						<li>
							Tell us about how much discount you want to offer
						</li>
						<li>
							Tell us how many coupons you want to publish
						</li>
						<li>
							Set your own terms for the coupon
						</li>
					</ol>
				</div>
			</ul>
		</div>
	    <div class="{style.smallPromoBox} {style.right}">
			<ul>
				<li>3. Boost sale instantly</li>
				<div class="{style.help}">
					<ol>
						<li>
							Local customers get notified automatically
							about promotions
						</li>
						<li>
							Instantly sell your merchandise
						</li>
					</ol>
				</div>
			</ul>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 