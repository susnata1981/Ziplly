<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:dt="urn:import:com.ziplly.app.client.widget"
	xmlns:dv="urn:import:com.ziplly.app.client.view.coupon" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
		.uploadForm {
		}
		.imagePanel {
		clear: both;
		display: block;
		border: 1px solid #ddd;
		border-shadow: 4px 4px 4px #555;
		}
		.image {
		max-width: 100%;
		max-height: 100%;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.imagePanel}" ui:field="imagePanel">
			<b:Image ui:field="imagePreview" addStyleNames="{style.image}" />
		</g:HTMLPanel>
		<g:FormPanel ui:field="uploadForm" addStyleNames="{style.uploadForm}">
			<b:FileUpload ui:field="fileUpload" name="image" />
		</g:FormPanel>
		<b:Image ui:field="loadingImage" />
	</g:HTMLPanel>
</ui:UiBinder>