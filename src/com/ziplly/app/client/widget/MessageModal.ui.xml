<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style type="com.ziplly.app.client.widget.MessageModal.Style">
		.message {
		display: block;
		padding: 4px;
		font-family: Verdana,
		Geneva, sans-serif;
		font-size: 14px;
		}
		.right {
		float: right;
		}
		.modalPanel {
		}
		.error {
			background: #FF1919;
			padding: 0 6px;
		}
		.success {
			background: #94FF94;
			padding: 0 6px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.modalPanel}">
		<b:Modal ui:field="modal" title="" backdrop="STATIC" keyboard="true"
			animation="true">
			<g:HTMLPanel>
			    <g:HTMLPanel ui:field="modalHeader">
			        <h3 ui:field="title"/>
			    </g:HTMLPanel>
				<g:HTMLPanel ui:field="modalContainer">
					<p ui:field="content" class="{style.message}"></p>
				</g:HTMLPanel>
				<b:Button ui:field="okBtn" addStyleNames="{style.right}">Ok</b:Button>
			</g:HTMLPanel>
		</b:Modal>
	</g:HTMLPanel>
</ui:UiBinder> 