<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
		.message {
		display: block;
		padding: 4px;
		font-family: Verdana, Geneva, sans-serif;
		font-size: 14px;
		}
		.right {
		float: right;
		}
	</ui:style>
	<g:HTMLPanel>
		<b:Modal ui:field="modal" title="" backdrop="STATIC" keyboard="true"
			animation="true">
			<g:HTMLPanel>
				<p ui:field="content" class="{style.message}"></p>
				<b:Button type="PRIMARY" size="SMALL" ui:field="okBtn" addStyleNames="{style.right}">Ok</b:Button>
			</g:HTMLPanel>
		</b:Modal>
	</g:HTMLPanel>
</ui:UiBinder> 