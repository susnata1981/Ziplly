<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.commnunitySummaryPanel {
			width: 98%;
			padding: 2px;
			height: auto;
		}
		.top {
			height: 20%;
			width: 98%;
			background: #f9f9f9;
		}
		.commnunitySummaryPanel .heading {
			font-family: sans-serif, fantasy;
			display: inline-block;
			width: 100%;
			font-size: 1.3em;
			color: #666;
			padding: 4px;
			border-bottom: 1px solid #ddd;
		}
		
		.text {
			font-family: sans-serif, fantasy;
			font-size: 1.2em;
			padding: 4px;
		}
		
		.mapPanel {
			height: 80%;
		}
	</ui:style>
	<g:HTMLPanel ui:field="communitySummaryPanel" addStyleNames="{style.commnunitySummaryPanel}">
		<div class="top">
			<p>
				<span ui:field="communityNameSpan" class="{style.heading}"></span>
			</p>
			<p>
				<g:Anchor ui:field="memberCountSpan" addStyleNames="{style.text}"></g:Anchor>
			</p>
			<p>
				<g:Anchor ui:field="businessCountSpan" addStyleNames="{style.text}"></g:Anchor>
			</p>
		</div>
		<g:HTMLPanel ui:field="mapPanel" addStyleNames="{style.mapPanel}">
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 