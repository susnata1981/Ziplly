<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style type="com.ziplly.app.client.widget.AccountFilterWidget.Style">
		.filterWidgetSection {
			margin-top: 0px;
		}
		.filterSectionElements {
			width: 120px;
		}
		.error {
			border: 2px solid red !important;
		}
		.valid {
		border: 2px solid green
		!important;
		}
		.accordion {
			margin: 0px !important;
		}	
	</ui:style>
	<b:Accordion>
		<b:AccordionGroup addStyleNames="{style.filterWidgetSection}" heading="Filter by distance">
			<b:Paragraph>
				<g:HTMLPanel ui:field="disntaceFilter">
					Zip:
					<div>
						<g:TextBox addStyleNames="{style.filterSectionElements}"
							ui:field="zipCode" />
						<b:ListBox addStyleNames="{style.filterSectionElements}"
							ui:field="distanceListBox">
							<g:item value="5">5</g:item>
							<g:item value="10">10</g:item>
							<g:item value="25">25</g:item>
							<g:item value="99999">Any</g:item>
						</b:ListBox>
					</div>
				</g:HTMLPanel>
			</b:Paragraph>
		</b:AccordionGroup>
		<b:AccordionGroup heading="Filter by interest">
		    <b:Paragraph>
		        <g:HTMLPanel ui:field="interestFilter">
		            <b:ListBox addStyleNames="{style.filterSectionElements}"
							ui:field="interestListBox">
					</b:ListBox>
		        </g:HTMLPanel>
		    </b:Paragraph>
		</b:AccordionGroup>
	</b:Accordion>
</ui:UiBinder>