<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:dv="urn:import:com.ziplly.app.client.view"
	xmlns:dt="urn:import:com.ziplly.app.client.widget" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
	xmlns:cell="urn:import:com.google.gwt.user.cellview.client">

	<ui:with type="com.ziplly.app.client.widget.MyBundle" field="resource" />
	<ui:style field="mainViewStyle"
		type="com.ziplly.app.client.view.MainView.MainViewStyle">
		#loginSection {
		height: 50px;
		margin: auto;
		text-align: center;
		}

		#searchForm {
		text-align: center;
		}
		.categoryHeading {
		text-align:center;
		background: #f3f3f3;
		}
		.logoutLnk {
		position: absolute;
		top: 10px;
		right:40px;
		}
		.individualProfilePerCategory {
		float: left;
		width: 330px;
		margin: 5px 10px 20px 5px;
		}
		.categoryDetails {
			width: 800px;
			margin: auto;
		}
	</ui:style>
	<g:HTMLPanel>
		<div id="mainContent">
			<div class="{mainViewStyle.logoutLnk}">
				<b:Button ui:field="logoutBtn">Logout</b:Button>
			</div>
			<div id="loginSectionn">
				<!-- <dt:LoginWidget ui:field="loginWidget" /> -->
			</div>
			<div id="searchForm">
				<b:WellForm>
					<b:ControlLabel>Find People the easy way...</b:ControlLabel>
					<b:TextBox placeholder="Search by interestâ€¦" ui:field="searchField" />
					<b:HelpBlock>Search &amp; Connect</b:HelpBlock>
					<b:Button addStyleNames="searchBtn" ui:field="searchBtn">Submit</b:Button>
				</b:WellForm>
				<b:Button ui:field="fbLoginButtonOnMainPage">Facebook Login</b:Button>
			</div>
			<div class="{mainViewStyle.categoryDetails}">
				<g:HTMLPanel ui:field="categoryDetailsSection"></g:HTMLPanel>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 