<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:dt="urn:import:com.ziplly.app.client.widget"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<ui:style>
		.profile_image {
		clear: both;
		margin: 10px;
		float: left;
		width:
		140px;
		height: 100px;
		}
		#profile_data_section {
		float: left;
		width: 300px;
		}
		.profile_info {
		clear: both;
		margin: 10px;
		width: 100px;
		}
	</ui:style>
	<g:HTMLPanel>
		<div id="mainContent">
			<div>
				<dt:LoginWidget ui:field="loginWidget" />
				<dt:LogoutWidget ui:field="logoutWidget" />
			</div>
			<g:HTMLPanel ui:field="loginMessageLabel">
				<g:Label>Please login first</g:Label>
				<b:Button ui:field="fbLoginButtonOnMainPage">Facebook Login</b:Button>
			</g:HTMLPanel>

			<b:TabPanel ui:field="accountViewTabs">
				<b:Tab heading="Profile" active="true">
					<g:HTMLPanel ui:field="profileSection"/>
				</b:Tab>
				<!-- <b:Tab heading="Profile Statistics"> 
				    <g:HTMLPanel ui:field="profileStatSection"/> 
				</b:Tab> -->
				<!-- <b:Tab heading="Profile Statistics"> <g:HTMLPanel ui:field="profileStatSection"> 
					</g:HTMLPanel> </b:Tab> -->
				<b:Tab heading="Messages">
				    <g:HTMLPanel ui:field="conversationSection"/>
				</b:Tab>
			</b:TabPanel>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 