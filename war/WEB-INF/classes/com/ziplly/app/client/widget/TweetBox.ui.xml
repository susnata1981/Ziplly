<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" xmlns:dv="urn:import:com.ziplly.app.client.view.coupon"
	xmlns:b2="urn:import:com.github.gwtbootstrap.datetimepicker.client.ui"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		@external tweetImagePreview;
		TextBox {
		padding: 3px;
		}
		.tweetActionPanel {
		background: #666;
		width: 100%;
		height: 0.6%;
		padding:
		2px 4px;
		}
		.tweetActionPanel a {
		color: #fff;
		width: 100%;
		font-size: 10px;
		font-family: sans-serif;
		}
		.uploadForm {
		margin-bottom: 5px;
		}
		.tweetHelpInline {
		clear: left;
		}
		.tweetBoxPanel TextArea {
		margin-bottom: 0;
		padding: 4px;
		}
		.tweetCategoryPanel {
		clear: both;
		}
		.tweetImagePreview {
		display: block;
		max-height: 160px;
		max-width: 160px;
		overflow: hidden;
		margin: 2px;
		}
		.tweetImagePreview img {
		max-height: 100%;
		max-width: 100%;
		}
		.previewPanel {
		width: 80%;
		border: 1px dotted
		#555444;
		padding: 4px;
		background: #fff;
		}
		.previewHeadingDiv {
			border-bottom: 1px solid #ddd;
			background: cyan;
			overflow: hidden;
			padding: 2px;
		}
		.previewHeading {
			display: inline-block;
			float: left;
			font-size: 18px;
			font-weight: bold;
			text-align: center;
			color: #666;
			margin: 0;
			padding: 2px;
		}
		.previewRightAnchor {
			float: right;
			font-size: 11px;
			padding: 2px;
		}

		.tweetTextPreview
		{
		display: block;
		padding:
		10px 0 2px 4px;
		color: #666;
		font-family:
		Georgia, serif;
		}
		.inlineLabel {
		margin: 4px 0 0 2px;
		font-size: 12px;
		display: inline-block;
		}
		.listBox {
		font-size: 12px;
		}
		.popoverLink {
		display: inline;
		font-size: 10px;
		}
		.horizontalButtonPanel {
			margin-top: 6px;
		}
		.btn {
			margin: 6px 6px 0 0;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.tweetBoxPanel}">
		<!-- <b:Form ui:field="tweetForm"> -->
		<b:ControlGroup ui:field="tweetCg">
			<b:Controls>
				<b:InputAddOn>
					<b:TextArea placeholder="Tell us what's going on in your communityâ€¦"
						ui:field="tweetTextBox" />
				</b:InputAddOn>
				<div ui:field="tweetHelpDiv" class="{style.tweetHelpInline}">
					<b:HelpInline ui:field="tweetHelpInline" />
				</div>
			</b:Controls>
		</b:ControlGroup>
		<g:FormPanel ui:field="uploadForm" addStyleNames="{style.uploadForm}">
			<!-- <g:HTMLPanel> <b:Icon type="UPLOAD"/><b:FileUpload ui:field="fileUpload" 
				name="image"/> </g:HTMLPanel> -->
			<b:FileUpload ui:field="fileUpload" name="image" />
		</g:FormPanel>
		<g:HTMLPanel ui:field="tweetActionPanel" addStyleNames="{style.tweetActionPanel}">
			<b:Icon type="STAR" />&nbsp;
			<g:Anchor ui:field="previewLinkAnchor">toggle preview</g:Anchor>&nbsp;
			<b:Image ui:field="uploadAnchorIcon" />
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="tweetCategoryPanel" addStyleNames="{style.tweetCategoryPanel}">
			<g:HTMLPanel>
				<b:ControlLabel addStyleNames="{style.inlineLabel}">Select Category</b:ControlLabel>
				<b:Popover text="Pick specific category to get better response"
					heading="Learn more">
					<g:Anchor addStyleNames="{style.popoverLink}">learn more</g:Anchor>
				</b:Popover>
			</g:HTMLPanel>
			<b:Controls>
				<b:ListBox ui:field="tweetCategoryList" addStyleNames="{style.listBox}">
				</b:ListBox>
			</b:Controls>
			<g:HTMLPanel>
				<b:ControlLabel addStyleNames="{style.inlineLabel}">Target neighborhood</b:ControlLabel>
				<b:Popover
					text="You can broadcast to your neighborhood or to the greater community for more visibility"
					heading="Learn more">
					<g:Anchor addStyleNames="{style.popoverLink}">learn more</g:Anchor>
				</b:Popover>
			</g:HTMLPanel>
			<b:Controls>
				<b:ListBox ui:field="tweetTargetNeighborhoodList"
					addStyleNames="{style.listBox}">
				</b:ListBox>
			</b:Controls>
			<dv:CouponFormWidget ui:field="couponFormWidget" />
		</g:HTMLPanel>
		<!-- </b:Form> -->
		<b:Modal ui:field="embedLinkModal" backdrop="STATIC" keyboard="true">
			<b:ControlGroup ui:field="embedLinkCg">
				<b:Controls>
					<b:TextBox ui:field="embedLinkTextBox" placeholder="enter url..."></b:TextBox>
					<div class="{style.tweetHelpInline}">
						<b:HelpInline ui:field="embedLinkHelpInline" />
					</div>
				</b:Controls>
			</b:ControlGroup>
			<b:Button ui:field="embedLinkButton" type="INVERSE">Embed</b:Button>
			<b:Button ui:field="cancelEmbedLinkButton">Cancel</b:Button>
		</b:Modal>
		<g:HTMLPanel ui:field="previewPanel" addStyleNames="{style.previewPanel}">
		    <div class="{style.previewHeadingDiv}">
			<b:Heading size="4" addStyleNames="{style.previewHeading}">Preview</b:Heading>
			<g:Anchor ui:field="changeTweetAnchor" addStyleNames="{style.previewRightAnchor}">change</g:Anchor>
			</div>
			<g:HTMLPanel ui:field="previewTweetImagePanel"
				addStyleNames="{style.tweetImagePreview}">
				<b:Image ui:field="previewTweetImage" />
			</g:HTMLPanel>
			<g:HTMLPanel addStyleNames="{style.tweetTextPreview}" ui:field="tweetTextPreview" />
			<g:HTMLPanel addStyleNames="{style.tweetTextPreview}" ui:field="couponPreviewPanel" />
		</g:HTMLPanel>
		<g:HorizontalPanel ui:field="horizontalButtonPanel" addStyleNames="{style.horizontalButtonPanel}">
				<b:Button type="PRIMARY" addStyleNames="{style.btn}"
					ui:field="tweetBtn">Share</b:Button>
				<b:Button addStyleNames="{style.btn}" ui:field="cancelBtn">Cancel</b:Button>
		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 